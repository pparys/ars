set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-key-1.0 {
  execsql {
    CREATE TABLE orders(id INTEGER PRIMARY KEY, customer_id INTEGER, 
      FOREIGN KEY customer_id REFERENCES customers ON DELETE CASCADE);
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
  CREATE TABLE services(order_id INTEGER, service_name TEXT, 
      FOREIGN KEY order_id REFERENCES orders ON DELETE CASCADE);
  INSERT INTO customers VALUES(1, 'John Doe');
  INSERT INTO orders(customer_id) VALUES(1);
  }
} {}

do_test insert-violates-foreign-key-1.2 {
  execsql {
    UPDATE customers SET name = 'Jane Doe' WHERE id = 1;
    DELETE FROM customers WHERE id = 1;
    SELECT * FROM orders;
  }
} {1 {}  
    

 finish_test