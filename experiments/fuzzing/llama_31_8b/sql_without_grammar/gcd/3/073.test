  execsql {
    CREATE TABLE categories(category_id INTEGER PRIMARY KEY);
    CREATE TABLE products(product_id INTEGER PRIMARY KEY, 
                         category_id INTEGER, 
                         FOREIGN KEY categoryId REFERENCES categories);
