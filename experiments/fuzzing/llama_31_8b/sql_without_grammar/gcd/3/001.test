set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-3.0 {
  execsql {
    CREATE TABLE orders(id INTEGER PRIMARY KEY, customer_id INTEGER, order_date TEXT DEFAULT current_date, total REAL DEFAULT   tasar);
  CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT, email TEXT UNIQUE);
  INSERT INTO customers(id, name, email) VALUES(1, 'John Doe', 'john.doe@example.com');
  INSERT INTO orders(id, customer_id, order_date, total) VALUES(101, 1, '2022-01-01', 100.0);
  INSERT INTO orders(id, customer_id, order_date, total) VALUES(102, 1, '2022-01-02', 200.0);
  }
} {}

do_test insert-violates-foreign-key-3.1 {
  execsql {
    UPDATE customers SET id = 2 WHERE id = 1;
  }
} {1 {FOREIGN KEY constraint failed: orders.customer_id}   
    
finish_test