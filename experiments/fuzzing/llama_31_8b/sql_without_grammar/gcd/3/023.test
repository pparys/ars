do_test setup-tables-3.0 {
  execsql {
    CREATE TABLE employees(id INTEGER, name TEXT, department TEXT);
    CREATE TABLE salaries(id INTEGER, employee_id INTEGER, amount REAL);
    INSERT INTO employees VALUES(1001, 'John Doe', 'Sales');
    INSERT INTO employees VALUES(1002, 'Jane Doe', 'Marketing');
    INSERT INTO salaries VALUES(2001, 1001, 5000.0);
    INSERT INTO salaries VALUES(2002, 1002, 6000.0);
  }
} {}

