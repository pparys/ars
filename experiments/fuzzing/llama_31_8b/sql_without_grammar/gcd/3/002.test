set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-keys-1.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, cusName TEXT);
    CREATE TABLE orders(orderId INTEGER PRIMARY KEY, id INTEGER, orderSize INTEGER, FOREIGN KEY id REFERENCES customers ON DELETE CASCADE);
  INSERT INTO customers(id, cusName) VALUES(1, 'Cus1');
  INSERT INTO customers(id, cusName) VALUES(2, 'Cus2');
  INSERT INTO orders(orderId, id, orderSize) VALUES(1, 1, 10);
  INSERT INTO orders(orderId, id, orderSize) VALUES(2, 2, 20);
  }
} {}

do_test delete-cascading-1.1 {
  execsql {
    DELETE FROM customers WHERE id = 2;
  }
} {}
finish_test