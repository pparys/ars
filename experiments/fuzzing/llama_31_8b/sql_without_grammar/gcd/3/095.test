set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-index-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(id INTEGER PRIMARY KEY AUTOINCREMENT, customer_id INTEGER, FOREIGN KEY customer_id REFERENCES customers);
    INSERT INTO customers(id, name) VALUES(3001, 'John Smith');
    INSERT INTO customers(id, name) VALUES(3002, 'Jane Doe');
    INSERT INTO orders(customer_id) VALUES(3001);
    INSERT INTO orders(customer_id) VALUES(3002);
  }
} {}

do_test delete-foreign-key-3.1 {
  execsql {
    DELETE FROM customers WHERE id = 3002;
  }
} {1 {FOREIGN KEY constraint failed: orders.customer_id, FOREIGN KEY constraint failed: orders.customer_id} 
      										 												                                                                                                                                                                                                                                                                                                                                               
                                                                                                                                                 
