set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-keys-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, customer_name TEXT NOT NULL);
    CREATE TABLE orders(order_id INTEGER PRIMARY KEY, customer_id INTEGER, FOREIGN KEY customer_id REFERENCES customers ON DELETE CASCADE);
    INSERT INTO customers VALUES(101, 'John Smith');
    INSERT INTO customers VALUES(102, 'Jane Doe');
    INSERT INTO orders VALUES(5001, 101);
    INSERT INTO orders VALUES(5002, 102);
  }
} {}

do_test delete-customer-3.1 {
  execsql {
    DELETE FROM customers WHERE id = 101;
  }
} {}
 
finish_test