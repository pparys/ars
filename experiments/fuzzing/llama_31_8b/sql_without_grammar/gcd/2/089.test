set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-key-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY AUTOINCREMENT, name TEXT);
    CREATE TABLE orders(order_id INTEGER PRIMARY KEY AUTOINCREMENT, customer_id INTEGER, 
      FOREIGN KEY customer_id REFERENCES customers ON DELETE CASCADE);
    INSERT INTO customers(name) VALUES('John');
    INSERT INTO customers(name) VALUES('Alice');
    INSERT INTO orders(customer_id) VALUES(1);
    INSERT INTO orders(customer_id) VALUES(1);
  }
} {}

do_test drop-foreign-key-violates-3.1 {
  execsql {
    DELETE FROM customers WHERE name = 'Alice';
  }
} {1 {FOREIGN KEY constraint failed: orders.customer_id}   												   																  						   	 				 										   				 																																																																																																																																																																																																																																																																																																																																