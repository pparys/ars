set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-schema-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY AUTOINCREMENT, name TEXT NOT NULL);
    CREATE TABLE orders(id INTEGER PRIMARY KEY AUTOINCREMENT, customer_id INTEGER, FOREIGN KEY customer_id REFERENCES customers ON DELETE CASCADE);
    INSERT INTO customers(name) VALUES('John Doe');
    INSERT INTO customers(name) VALUES('Jane Doe');
    INSERT INTO orders(customer_id) VALUES(1);
    INSERT INTO orders(customer_id) VALUES(2);
  }
} {}

do_test delete-customer-3.1 {
  execsql {
    DELETE FROM customers WHERE name = 'John Doe';
  }
} {}

finish_test