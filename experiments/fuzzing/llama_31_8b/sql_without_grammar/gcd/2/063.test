set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-key-1.0 {
  execsql {
    CREATE TABLE products(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(id INTEGER PRIMARY KEY, product_id INTEGER, FOREIGN KEY product_id REFERENCES products);
    INSERT INTO products VALUES(1, 'Product A');
    INSERT INTO products VALUES(2, 'Product B');
    INSERT INTO orders VALUES(1, 1);
  }
} {}

do_test delete-product-1.1 {
  execsql {
    DELETE FROM products WHERE id = 1;
  }
  } {1 {FOREIGN KEY constraint failed: orders}   	   

finish_test