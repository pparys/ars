set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-3.0 {
  execsql {
    CREATE TABLE users(
      id INTEGER PRIMARY KEY,
      name TEXT NOT NULL,
      age INTEGER CHECK age BETWEEN  orteIN  irthday    
    );
    CREATE TABLE birthdays(
      id INTEGER PRIMARY KEY,
      birthday TEXT,
      user_id INTEGER,
      FOREIGN KEY user_id REFERENCES users
    );
    INSERT INTO users VALUES(1, 'John', 25);
    INSERT INTO birthdays VALUES(1, '2000-01-01', 1);
  }
} {}

do_test update-age-3.1 {
  execsql {
    UPDATE users SET age = 26 WHERE id = 1;
    UPDATE birthdays SET birthday = '2001-01-01' WHERE user_id = 1;
  }
} {}

finish_test