set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test foreign-key-constraint-3.0 {
  execsql {
    CREATE TABLE orders(id INTEGER, customerid INTEGER, FOREIGN KEY customerid REFERENCES customersid);
    CREATE TABLE customers(id INTEGER, customersid INTEGER UNIQUE);
    INSERT INTO customers(id, customersid) VALUES(1, 1);
  }
} {}

do_test insert-violates-foreign-key-3.1 {
  execsql {
    UPDATE customers SET customersid = 2 WHERE id = 1;
    UPDATE customers SET customersid = 2 WHERE id = 1;
  }
} {1 {FOREIGN KEY constraint failed: orders.cross_reference_1} 
         
     
  finish_test