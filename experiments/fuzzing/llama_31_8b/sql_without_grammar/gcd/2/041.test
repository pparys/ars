set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-keys-3.0 {
  execsql {
    CREATE TABLE orders(order_id INTEGER PRIMARY KEY, user_id INTEGER);
    CREATE TABLE users(user_id INTEGER PRIMARY KEY, name TEXT);
    INSERT INTO users VALUES(1, 'John Doe');
    INSERT INTO users VALUES(2, 'Jane Doe');
    INSERT INTO orders VALUES(1, 1);
    INSERT INTO orders VALUES(2, 2);
  }
} {}

do_test insert-violates-foreign-keys-3.1 {
  execsql {
    UPDATE users SET user_id = 2 WHERE user_id = 1;
    UPDATE orders SET user_id = 2 WHERE user_id = 1;
  }
                                                                                          
                                                                                            
                                                      