set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-keys-1.0 {
  execsql {
    CREATE TABLE orders(id INTEGER PRIMARY KEY, customer_id INTEGER, total REAL);
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT UNIQUE);
    INSERT INTO customers(id, name) VALUES(1, 'John Doe');
    INSERT INTO customers(id, name) VALUES(2, 'Jane Doe');
    INSERT INTO orders(id, customer_id, total) VALUES(101, 1, 100.99);
  }
} {}

do_test update-violates-foreign-key-1.1 {
  execsql {
    UPDATE customers SET name = 'Invalid User' WHERE id = 1;
    UPDATE orders SET customer_id = 2 WHERE id = 101;
  }
} {1 {FOREIGN KEY constraint failed: orders} 				
  						
				
  																																																																																																																																																																																																																																																																																																																													