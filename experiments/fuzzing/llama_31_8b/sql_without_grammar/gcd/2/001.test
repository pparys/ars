set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, 
                          name TEXT NOT NULL, 
                          city TEXT DEFAULT NULL);
    CREATE TABLE orders(id INTEGER PRIMARY KEY, 
                       customer_id INTEGER REFERENCES customers,
                       order_date DATE DEFAULT CURRENT_DATE);
    INSERT INTO customers(id, name, city) VALUES(1, 'Customer 1', 'New York');
    INSERT INTO customers(id, name, city) VALUES(2, 'Customer 2', 'Los Angeles');
    INSERT INTO orders(id, customer_id) VALUES(101, 1);
  }
} {}

do_test insert-foreign-key-violation-3.1 {
  execsql {
    SELECT * FROM customers;
    SELECT * FROM orders;
  }
  } {}
  finish_test