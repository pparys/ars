do_test setup-foreign-key-1.0 {
  execsql {
    CREATE TABLE customers(
      id INTEGER PRIMARY KEY,
      company_name TEXT NOT NULL
    );
    CREATE TABLE orders(
      id INTEGER PRIMARY KEY,
      customer_id INTEGER,
      FOREIGN KEY customer_id REFERENCES customers ON DELETE CASCADE
    );
  CREATE TABLE employees(
      id INTEGER,
      name TEXT,
      customer_id INTEGER,
      PRIMARY KEY  customers_id INTEGER NOT NULL, 
      FOREIGN KEY customer_id REFERENCES customers ON DELETE SET DEFAULT
