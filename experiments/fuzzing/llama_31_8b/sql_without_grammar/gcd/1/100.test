set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-keys-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(id INTEGER PRIMARY KEY, cid INTEGER, FOREIGN KEY cid REFERENCES customers);
    INSERT INTO customers VALUES(1, 'John Doe');
    INSERT INTO customers VALUES(2, 'Jane Doe');
    INSERT INTO orders VALUES(1, 1);
  }
} {}

do_test insert-violates-foreign-keys-3.1 {
  execsql {
    UPDATE customers SET name = 'John Smith' WHERE id = 1;
    SELECT * FROM orders;
  }
} {}
finish_test