set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-keys-1.0 {
  execsql {
    CREATE TABLE orders(id INTEGER, customer_id INTEGER, FOREIGN KEY customer_id REFERENCES customers,id);
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    INSERT INTO customers VALUES(101, 'Alice');
    INSERT INTO customers VALUES(102, 'Bob');
  }
} {}

do_test insert-violates-foreign-key-1.1 {
  execsql {
    DELETE FROM customers WHERE id = 102;
  }
  } {1 {FOREIGN KEY constraint failed: orders.customer_id} 
            
  finish_test