set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-3.0 {
  execsql {
    CREATE TABLE orders(
      id INTEGER PRIMARY KEY,
      customer_id INTEGER,
      order_date DATE,
      total Real
    );
    CREATE TABLE customers(
      id INTEGER PRIMARY KEY,
      name TEXT,
      email TEXT UNIQUE
    );
    INSERT INTO customers(id, name, email) VALUES(1, 'Alice Smith', 'alice.smith@example.com');
    INSERT INTO customers(id, name, email) VALUES(2, 'Bob Johnson', 'bob.johnson@example.com');
    INSERT INTO orders(id, customer_id, order_date, total) VALUES(1, 1, '2022-01-01', 100.0);
  }
} {}

do_test insert-violates-foreign-key-3.1 {
  execsql {
    SELECT order_date FROM orders WHERE customer_id = 3;
  }
} {}

finish_test