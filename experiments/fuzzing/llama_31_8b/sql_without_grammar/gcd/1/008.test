set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-keys-1.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(customer_id INTEGER, order_date DATE, PRIMARY KEY ORDER USING index order_idx UNIQUE);
    INSERT INTO customers VALUES(1, "John");
    INSERT INTO customers VALUES(2, "Jane");
    INSERT INTO orders VALUES(1, '2020-01-01');
  }
} {}

do_test insert-missing-foreign-key-2.0 {
  execsql {
    SELECT * FROM orders;
  }
} {1 ""}

finish_test