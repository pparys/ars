set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-index-3.0 {
  execsql {
    CREATE TABLE students(id INTEGER, name TEXT, grade REAL, school TEXT);
    INSERT INTO students VALUES(1, 'John', 85.0, 'Springfield High');
    INSERT INTO students VALUES(2, 'Emma', 92.0, 'Springfield High');
