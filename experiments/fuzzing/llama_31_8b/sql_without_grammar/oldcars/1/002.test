set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE companies(id INTEGER PRIMARY KEY, name TEXT, address TEXT);
    CREATE TABLE employees(id INTEGER PRIMARY KEY, company_id INTEGER, name TEXT, salary REAL);

    INSERT INTO companies(id, name, address) VALUES(1, 'Acme Inc.', '123 Main St.');
    INSERT INTO companies(id, name, address) VALUES(2, 'Widgets Ltd.', '456 Elm St.');

    INSERT INTO employees(id, company_id, name, salary) VALUES(1, 1, 'Jane', 50000.0);
    INSERT INTO employees(id, company_id, name, salary) VALUES(2, 2, 'John', 60000.0);
  }
} {}

do_test select-employee-salary-1.1 {
  execsql {
    SELECT name, salary FROM employees WHERE company_id = 1;
  }
} {Jane 50000.0}

finish_test