set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-3.0 {
  execsql {
    CREATE TABLE products(
      id INTEGER PRIMARY KEY AUTOINCREMENT,
      product_name TEXT,
      description TEXT,
      price REAL,
      rating INTEGER
    );
