set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-order-1.0 {
  execsql {
    CREATE TABLE orders(order_id INTEGER, customer_name TEXT, total REAL);
    INSERT INTO orders(order_id, customer_name, total) VALUES(1001, 'John Doe', 100.99);
    INSERT INTO orders(order_id, customer_name, total) VALUES(1002, 'Jane Doe', 50.00);
  }
} {}

do_test select-order-1.1 {
  execsql {
    SELECT customer_name, total 
    FROM orders 
    ORDER BY total DESC, order_id ASC LIMIT 1;
  }
} {Jane Doe 50.0}

finish_test