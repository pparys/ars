set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE employees(id INTEGER, name TEXT, salary REAL, manager_id INTEGER);
    INSERT INTO employees(id, name, salary, manager_id) VALUES(1, 'John', 50000, NULL);
    INSERT INTO employees(id, name, salary, manager_id) VALUES(2, 'Jane', 60000, 1);
    INSERT INTO employees(id, name, salary, manager_id) VALUES(3, 'Bob', 70000, 1);
  }
} {}

do_test select-employees-1.1 {
  execsql {
    SELECT name, salary, manager_id FROM employees WHERE manager_id = 1;
  }
} {John 50000 1 Jane 60000 1}

finish_test