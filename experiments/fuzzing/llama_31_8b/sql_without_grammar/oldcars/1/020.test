set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(id INTEGER PRIMARY KEY, customerid INTEGER, total REAL);
    INSERT INTO customers VALUES(1, 'John Doe');
    INSERT INTO orders VALUES(1, 1, 100.50);
    INSERT INTO orders VALUES(2, 1, 200.00);
  }
} {}

do_test select-order-3.1 {
  execsql {
    SELECT total FROM orders WHERE customerid = 1 ORDER BY total DESC LIMIT 1;
  }
} {200.0}

finish_test