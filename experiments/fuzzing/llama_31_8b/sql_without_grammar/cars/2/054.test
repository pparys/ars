set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-employees-3.0 {
  execsql {
    CREATE TABLE employees(employee_id INTEGER PRIMARY KEY AUTOINCREMENT, 
                          name TEXT NOT NULL,
                          department TEXT,
                          salary REAL NOT NULL);
