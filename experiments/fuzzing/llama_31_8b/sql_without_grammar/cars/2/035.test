set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.0 {
  execsql {
    CREATE TABLE books(book_id INTEGER, book_name TEXT, author TEXT);
    INSERT INTO books(book_id, book_name, author) 
      VALUES(301, 'Book 1', 'Author A');
    INSERT INTO books(book_id, book_name, author) 
      VALUES(302, 'Book 2', 'Author B');
    INSERT INTO books(book_id, book_name, author) 
      VALUES(303, 'Book 3', 'Author C');
  }
} {}

do_test update-author-3.1 {
  execsql {
    UPDATE books SET author = 'Author X' WHERE book_id = 301;
    SELECT book_name, author FROM books WHERE book_id = 301;
  }
} {Book 1 Author X}

finish_test