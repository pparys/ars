set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-1.0 {
  execsql {
    CREATE TABLE departments(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE employees(id INTEGER PRIMARY KEY, department_id INTEGER, manager_id INTEGER, name TEXT);
    INSERT INTO departments(id, name) VALUES(1, 'Sales');
    INSERT INTO departments(id, name) VALUES(2, 'Engineering');
    INSERT INTO employees(id, department_id, manager_id, name) VALUES(1, 1, NULL, 'John');
    INSERT INTO employees(id, department_id, manager_id, name) VALUES(2, 2, 1, 'Alice');
    INSERT INTO employees(id, department_id, manager_id, name) VALUES(3, 1, 1, 'Bob');
  }
} {}

do_test update-department-1.1 {
  execsql {
    UPDATE employees 
    SET department_id = 2 
    WHERE id = 1;
  }
} {}

finish_test