set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE employees(id INTEGER, name TEXT, department TEXT);
    INSERT INTO employees(id, name, department) VALUES(201, 'John Doe', 'Sales');
    INSERT INTO employees(id, name, department) VALUES(202, 'Jane Doe', 'Marketing');
  }
} {}

do_test select-employee-1.1 {
  execsql {
    SELECT name FROM employees WHERE department = 'Marketing' AND id = 202;
  }
} {Jane Doe}

finish_test