set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-employee-1.0 {
  execsql {
    CREATE TABLE employees(id INTEGER PRIMARY KEY, name TEXT, salary REAL, manager INTEGER);
    INSERT INTO employees(id, name, salary, manager) VALUES(101, 'John', 50000.0, NULL);
    INSERT INTO employees(id, name, salary, manager) VALUES(102, 'Jane', 60000.0, 101);
    INSERT INTO employees(id, name, salary, manager) VALUES(103, 'Bob', 70000.0, 101);
  }
} {}

do_test select-manager-1.1 {
  execsql {
    SELECT name FROM employees WHERE manager = 101;
  }
} {Jane Bob}

finish_test