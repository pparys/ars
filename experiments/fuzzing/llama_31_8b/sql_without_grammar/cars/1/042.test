set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE departments(id INTEGER, name TEXT);
    CREATE TABLE employees( id INTEGER, department_id INTEGER, name TEXT);
    INSERT INTO departments(id, name) VALUES(1, 'Sales');
    INSERT INTO departments(id, name) VALUES(2, 'Marketing');
    INSERT INTO employees( id, department_id, name) VALUES(1, 1, 'John Doe');
    INSERT INTO employees( id, department_id, name) VALUES(2, 2, 'Jane Doe');
  }
} {}

