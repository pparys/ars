set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-2.0 {
  execsql {
    CREATE TABLE books(id INTEGER PRIMARY KEY, title TEXT, author INTEGER);
    CREATE TABLE authors(id INTEGER PRIMARY KEY, name TEXT);
    INSERT INTO authors(id, name) VALUES(1, 'J.K. Rowling');
    INSERT INTO books(id, title, author) VALUES(1, 'Harry Potter 1', 1);
    INSERT INTO books(id, title, author) VALUES(2, 'Harry Potter 2', 1);
  }
} {}

do_test select-books-2.1 {
  execsql {
    SELECT title FROM books WHERE author = 1 ORDER BY id;
  }
} {Harry Potter 1 Harry Potter 2}

finish_test