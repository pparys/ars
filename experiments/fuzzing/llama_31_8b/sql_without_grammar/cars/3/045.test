set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-previous-siblings-1.0 {
  execsql {
    CREATE TABLE people(
      id INTEGER,
      first_name TEXT,
      last_name TEXT,
      siblings INTEGER
    );
    INSERT INTO people VALUES(
      1, 'John', 'Doe', null
    );
    INSERT INTO people VALUES(
      2, 'Jane', 'Doe', 1
    );
    INSERT INTO people VALUES(
      3, 'Bob', 'Smith', 1
    );
  }
} {}

do_test select-previous-siblings-1.1 {
  execsql {
    SELECT id, last_name FROM people WHERE siblings = 1;
  }
} {3 Doe}

finish_test