set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-orders-1.0 {
  execsql {
    CREATE TABLE orders(order_id INTEGER PRIMARY KEY, customer_name TEXT, order_date DATE);
    INSERT INTO orders(order_id, customer_name, order_date) VALUES(1, 'John Doe', '2022-01-01');
    INSERT INTO orders(order_id, customer_name, order_date) VALUES(2, 'Jane Doe', '2022-01-15');
    INSERT INTO orders(order_id, customer_name, order_date) VALUES(3, 'John Doe', '2022-02-01');
  }
} {}

do_test select-orders-1.1 {
  execsql {
    SELECT order_id, customer_name, order_date 
    FROM orders 
    WHERE customer_name = 'John Doe' 
    ORDER BY order_date DESC 
    LIMIT 2;
  }
} {3 John Doe 2022-02-01 1 John Doe 2022-01-01}

finish_test