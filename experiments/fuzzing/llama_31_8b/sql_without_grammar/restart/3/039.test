    UPDATE orders SET customer_id = 10;
    UPDATE orders SET customer_id = 10 WHERE id = 1;
  }
} {1 {FOREIGN KEY constraint failed: orders_customer_id FK438DC97EEB6D41C; MySQL -- Cannot add or update a child row: a foreign key constraint fails (FOREIGN KEY Constraint in SQL)}   	      
      
      
finish_test