set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-users-2.0 {
  execsql {
    CREATE TABLE users(id INTEGER PRIMARY KEY, email TEXT, department TEXT);
    INSERT INTO users(email, department) VALUES('john.doe@example.com', 'Sales');
