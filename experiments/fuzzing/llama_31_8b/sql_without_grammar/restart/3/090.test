set testdir [file dirname $argv0]

source $testdir/tester.tcl

do_test setup-tables-3.0 {
  execsql {
    CREATE TABLE orders (id INTEGER PRIMARY KEY, customer_id INTEGER,
      order_date DATE, total REAL);
    CREATE TABLE customers (id INTEGER PRIMARY KEY, name TEXT, email TEXT);
    INSERT INTO customers (id, name, email)
      VALUES(1, 'John Doe', 'john@example.com');
    INSERT INTO orders (id, customer_id, order_date, total)
      VALUES(101, 1, '2022-01-01', 100.00);
  }
} {}

do_test update-order-3.1 {
  execsql {
    UPDATE orders SET total = total 	WHERE id = 101;
    SELECT total FROM orders WHERE id = 101;
  }
} {100.0}

finish_test