set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE departments(department_id INTEGER, name TEXT NOT NULL, manager_id INTEGER);
    INSERT INTO departments(department_id, name, manager_id) VALUES(1, 'Sales', NULL);
    INSERT INTO departments(department_id, name, manager_id) VALUES(2, 'Marketing', 1);
  }
} {}

do_test check-department-manager-1.1 {
  execsql {
    SELECT name, manager_id FROM departments WHERE department_id = 2;
  }
} {Marketing 1}

finish_test