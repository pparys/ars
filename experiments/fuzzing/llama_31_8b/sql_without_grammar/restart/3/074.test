set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-keys-3.0 {
  execsql {
    CREATE TABLE customers(
      id INTEGER PRIMARY KEY,
      name TEXT NOT NULL,
      credit_limit REAL DEFAULT expr  start  end
    );
    CREATE TABLE orders(
      id INTEGER PRIMARY KEY,
      customer_id INTEGER NOT NULL,
      FOREIGN KEY customer_id REFERENCES customers ON DELETE CASCADE
    );
    INSERT INTO customers(id, name, credit_limit) VALUES(1, 'Alice', 1000.00);
    INSERT INTO customers(id, name, credit_limit) VALUES(2, 'Bob', 500.00);
  }
} {}

do_test insert-foreign-key-3.1 {
  execsql {
    SELECT name FROM customers WHERE id = 1;
  }
} {Alice}

finish_test