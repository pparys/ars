set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE products(id INTEGER, name TEXT, price REAL, stock INTEGER);
    INSERT INTO products(id, name, price, stock) VALUES(1, 'Laptop', 999.99, 100);
    INSERT INTO products(id, name, price, stock) VALUES(2, 'Phone', 599.99, 200);
  }
} {}

do_test update-product-1.1 {
  execsql {
    UPDATE products SET price = price, stock = stock
  WHERE id = 1;
    SELECT name, price, stock FROM products WHERE id = 1;
  }
} {Laptop 999.99 100}

finish_test