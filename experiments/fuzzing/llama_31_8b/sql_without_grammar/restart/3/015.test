set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-key-3.0 {
  execsql {
    CREATE TABLE departments(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE employees(id INTEGER PRIMARY KEY, department_id INTEGER, 
                        FOREIGN KEY department_id REFERENCES departments);
    INSERT INTO departments VALUES(1, 'Sales');
    INSERT INTO employees VALUES(201, 1);
  }
} {}

do_test insert-violates-foreign-key-3.1 {
  execsql {
    UPDATE departments SET name = 'Support';
    SELECT * FROM employees;
  }
} {201 1}
finish_test