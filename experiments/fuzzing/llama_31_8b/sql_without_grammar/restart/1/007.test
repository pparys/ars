set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.0 {
  execsql {
    CREATE TABLE authors(author_id INTEGER, name TEXT);
    CREATE TABLE books(book_id INTEGER, author_id INTEGER, title TEXT, PRIMARY KEY book_id);
    INSERT INTO authors VALUES(1, 'John Doe');
    INSERT INTO authors VALUES(2, 'Jane Smith');
    INSERT INTO books VALUES(1, 1, 'Book1');
    INSERT INTO books VALUES(2, 2, 'Book2');
    INSERT INTO books VALUES(3, 1, 'Book3');
  }
} {}

do_test select-books-3.1 {
  execsql {
    SELECT title FROM books WHERE author_id = 1;
  }
} {Book1 Book3}

finish_test