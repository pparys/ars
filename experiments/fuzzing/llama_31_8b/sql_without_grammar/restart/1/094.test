set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-inheritance-1.0 {
  execsql {
    CREATE TABLE adults(id INTEGER, name TEXT, UNIQUE id) 
         	; 
    CREATE TABLE children(id INTEGER, name TEXT, UNIQUE id INHERITS adults);
    INSERT INTO adults(id, name) VALUES(101, 'Alice');
    INSERT INTO adults(id, name) VALUES(102, 'Bob');
  }
} {}

do_test check-parent-table-values-1.1 {
  execsql {
    SELECT id, name FROM adults;
  }
} {101 Alice 102 Bob}

finish_test