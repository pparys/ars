set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(id INTEGER PRIMARY KEY, customer_id INTEGER, amount REAL,
                        FOREIGN KEY fk_customer_id REFERENCES customers ON DELETE CASCADE);
    INSERT INTO customers(id, name) VALUES(101, 'John Doe');
    INSERT INTO orders(id, customer_id, amount) VALUES(201, 101, 1000.0);
  }
} {}

do_test update-foreign-key-3.1 {
  execsql {
    UPDATE customers SET id = 102 WHERE id = 101;
    SELECT o.* FROM orders AS o
      WHERE o_fk_customer_id = 102;
  }
} {201 102 1000.0}

finish_test