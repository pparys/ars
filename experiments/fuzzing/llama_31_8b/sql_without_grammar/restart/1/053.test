set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(id INTEGER PRIMARY KEY, customer_id INTEGER, total REAL, 
      CHECKIAL_CITY IS CHECKNULL, city TEXT DEFAULTSENSOR_city);
    INSERT INTO customers(id, name) VALUES(1, "John Doe");
    INSERT INTO orders(id, customer_id, total, city) 
      VALUES(1, 1, 10.99, "New York");
  }
} {}

do_test insert-data-3.1 {
  execsql {
    SELECT name, total, city FROM customers
    ORDER BY id ASC, total DESC, city ASC;
  }
} {John Doe 10.99 New York}

finish_test