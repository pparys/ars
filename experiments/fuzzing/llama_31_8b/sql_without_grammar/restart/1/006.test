set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test set-null-and-string-2.0 {
  execsql {
    CREATE TABLE numbers(id INTEGER, value TEXT);
    INSERT INTO numbers(id, value) VALUES(1, 'five');
    INSERT INTO numbers(id, value) VALUES(2, '');
  }
} {}

do_test change-null-to-empty-string-2.1 {
  execsql {
    UPDATE numbers SET value = '' WHERE id = 1;
  }
} {}

finish_test