set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-keys-1.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(customer INTEGER, total REAL, 
                       FOREIGN KEY IF EXISTS customer REFERENCES customers ON DELETE CASCADE);
    INSERT INTO customers(id, name) VALUES(201, 'John');
    INSERT INTO orders(customer, total) VALUES(201, 100.0);
  }
} {}

do_test delete-subordinate-1.1 {
  execsql {
    DELETE FROM customers WHERE name = 'John';
  }
} {}

finish_test