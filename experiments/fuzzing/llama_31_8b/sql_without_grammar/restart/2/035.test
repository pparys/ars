set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY AUTOINCREMENT, name TEXT);
    CREATE TABLE orders(id INTEGER PRIMARY KEY AUTOINCREMENT, customer_id INTEGER,
                        FOREIGN KEY customer_id REFERENCES customers ON DELETE CASCADE);
    INSERT INTO customers(id, name) VALUES(1, 'John Doe');
    INSERT INTO customers(id, name) VALUES(2, 'Jane Doe');
    INSERT INTO orders(id, customer_id) VALUES(1, 1);
    INSERT INTO orders(id, customer_id) VALUES(2, 2);
  }
} {}

do_test delete-cascade-3.1 {
  execsql {
    DELETE FROM customers WHERE id = 2;
  }
} {}

finish_test