set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test index-operator-1.0 {
  execsql {
    CREATE TABLE documents(id INTEGER PRIMARY KEY, author TEXT, title TEXT);
    INSERT INTO documents(author, title) VALUES('John Doe', 'Document Title 1');
    INSERT INTO documents(author, title) VALUES('Jane Doe', 'Document Title 2');
  }
} {}

do_test select-with-index-1.1 {
  execsql {
    SELECT title FROM documents WHERE author = 'John Doe';
  }
} {Document Title 1}

finish_test