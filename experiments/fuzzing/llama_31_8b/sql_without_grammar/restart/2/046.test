set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-key-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(id INTEGER, customer_id INTEGER, FOREIGN KEY customer_id REFERENCES customers);
    INSERT INTO customers(id, name) VALUES(1, 'John');
    INSERT INTO customers(id, name) VALUES(2, 'Jane');
    INSERT INTO orders(id, customer_id) VALUES(1, 1);
  }
} {}

do_test insert-violates-foreign-key-3.1 {
  execsql {
    SELECT * FROM customers;
  }
} {1 John 2 Jane}

finish_test