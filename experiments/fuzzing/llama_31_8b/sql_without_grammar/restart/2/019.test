set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-2.0 {
  execsql {
    CREATE TABLE orders(id INTEGER PRIMARY KEY, customer TEXT NOT NULL, total REAL);
    INSERT INTO orders(customer, total) VALUES('Alice', 100.0);
    INSERT INTO orders(customer, total) VALUES('Bob', 200.0);
  }
} {}

do_test update-total-2.1 {
  execsql {
    UPDATE orders SET total = total  >= 100  WHERE customer = 'Alice';
  }
} {}

finish_test