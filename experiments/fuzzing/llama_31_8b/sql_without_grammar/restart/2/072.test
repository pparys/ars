set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-forig-etc-3.0 {
  execsql {
    CREATE TABLE books(isbn TEXT PRIMARY KEY, title TEXT, author TEXT);
    INSERT INTO books VALUES('123456789X', 'To Kill a Mockingbird', 'Harper Lee');
    INSERT INTO books VALUES('9876543210', '1984', 'George Orwell');
  }
} {}

do_test select-author-3.1 {
  execsql {
    SELECT author FROM books WHERE isbn = '9876543210';
  }
} {George Orwell}

finish_test