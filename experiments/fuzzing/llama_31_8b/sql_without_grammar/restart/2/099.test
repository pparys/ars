set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test create-index-3.0 {
  execsql {
    CREATE TABLE products(id INTEGER, name TEXT, price REAL);
    INSERT INTO products(id, name, price) VALUES(1, 'Product A', 10.99);
    INSERT INTO products(id, name, price) VALUES(2, 'Product B', 9.99);
    INSERT INTO products(id, name, price) VALUES(3, 'Product C', 19.99);
    INSERT INTO products(id, name, price) VALUES(4, 'Product D', 29.99);
  }
} {}

do_test select-product-3.1 {
  execsql {
    SELECT name, price FROM products WHERE price > 10.00
    ORDER BY price DESC LIMIT 1;
  }
} {29.99 Product D}

finish_test