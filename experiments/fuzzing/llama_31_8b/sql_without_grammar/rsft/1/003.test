set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test reorder-columns-1.0 {
  execsql {
    CREATE TABLE orders(id INTEGER, order_date DATE, customer_name TEXT, total REAL);
    INSERT INTO orders VALUES(101, '2022-01-01', 'John Doe', 100.50);
    INSERT INTO orders VALUES(102, '2022-01-02', 'Jane Doe', 200.00);
  }
} {}

