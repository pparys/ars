set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test insert-first-3.0 {
  execsql {
    CREATE TABLE albums(
      id INTEGER PRIMARY KEY,
      title TEXT NOT NULL,
      artist TEXT NOT NULL,
      release_date DATE NOT NULL
    );
    INSERT INTO albums VALUES(1, 'Thriller', 'Michael Jackson', '1982-11-29');
    INSERT INTO albums VALUES(2, 'Hotel California', 'Eagles', '1976-12-08');
  }
} {}

do_test query-select-3.1 {
  execsql {
    SELECT title, artist FROM albums WHERE artist = 'Michael Jackson';
  }
} {Thriller}

finish_test