set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-user-team-3.0 {
  execsql {
    CREATE TABLE users(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE teams(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE user_teams(user_id INTEGER, team_id INTEGER);
    INSERT INTO users(id, name) VALUES(1, 'Alice');
    INSERT INTO users(id, name) VALUES(2, 'Bob');
    INSERT INTO teams(id, name) VALUES(1, 'Team A');
    INSERT INTO teams(id, name) VALUES(2, 'Team B');
    INSERT INTO user_teams(user_id, team_id) VALUES(1, 1);
    INSERT INTO user_teams(user_id, team_id) VALUES(2, 2);
  }
} {}

do_test find-user-teams-3.1 {
  execsql {
    SELECT user_id, team_id FROM user_teams
    WHERE user_id = 1;
  }
} {1 1}

finish_test