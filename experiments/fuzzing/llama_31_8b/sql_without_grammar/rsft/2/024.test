set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-forge-3.0 {
  execsql {
    CREATE TABLE forges(id INTEGER, name TEXT, owner TEXT);
    INSERT INTO forges VALUES(1001, 'Iron', 'John');
