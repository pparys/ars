set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-products-1.0 {
  execsql {
    CREATE TABLE products(product_id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE inventory(product_id INTEGER, quantity INTEGER);
    INSERT INTO products(product_id, name) VALUES(1, 'Laptop');
    INSERT INTO products(product_id, name) VALUES(2, 'Desktop');
    INSERT INTO inventory(product_id, quantity) VALUES(1, 50);
    INSERT INTO inventory(product_id, quantity) VALUES(2, 100);
  }
} {}

do_test update-product-1.1 {
  execsql {
    UPDATE inventory SET quantity = 75 WHERE product_id = 1;
    SELECT quantity FROM inventory WHERE product_id = 1;
  }
} {75}

finish_test