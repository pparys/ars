set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-timestamps-1.0 {
  execsql {
    CREATE TABLE events(id INTEGER, name TEXT, timestamp DATETIME DEFAULT CURRENT_TIMESTAMP);
