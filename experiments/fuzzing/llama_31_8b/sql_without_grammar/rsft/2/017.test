set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-forge-1.0 {
  execsql {
    CREATE TABLE forges(id INTEGER PRIMARY KEY, name TEXT, year INTEGER);
    INSERT INTO forges(id, name, year) VALUES(1, 'Damascus Steel', 500);
    INSERT INTO forges(id, name, year) VALUES(2, 'Crucible Steel', 2020);
  }
} {}

do_test find-forge-1.1 {
  execsql {
    SELECT name, year FROM forges WHERE id = 1;
  }
} {Damascus Steel 500}
 
finish_test