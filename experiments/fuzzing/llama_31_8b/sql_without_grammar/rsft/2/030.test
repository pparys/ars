set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-employee-1.0 {
  execsql {
    CREATE TABLE employees(id INTEGER PRIMARY KEY AUTOINCREMENT, 
                          name TEXT, 
                          salary REAL, 
                          manager INTEGER);
    INSERT INTO employees(name, salary, manager) 
      VALUES('John Doe', 50000.0, NULL);
    INSERT INTO employees(name, salary, manager) 
      VALUES('Jane Doe', 60000.0, 1);
    INSERT INTO employees(name, salary, manager) 
      VALUES('Bob Smith', 40000.0, 1);
  }
} {}

do_test query-employees-1.1 {
  execsql {
    SELECT name, salary, manager 
    FROM employees 
    WHERE manager = 1;
  }
} {Jane Doe 60000.0 1 Bob Smith 40000.0 1}

finish_test