set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.0 {
  execsql {
    CREATE TABLE books(author TEXT, title TEXT, year INTEGER);
    INSERT INTO books(author, title, year) VALUES('John', 'Book1', 2000);
    INSERT INTO books(author, title, year) VALUES('Alice', 'Book2', 2001);
  }
} {}

do_test select-books-3.1 {
  execsql {
    SELECT title, year FROM books WHERE author = 'John' ORDER BY year DESC LIMIT 1;
  }
} {Book1 2000}

finish_test