set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test insert-into-table-1.0 {
  execsql {
    CREATE TABLE employee(id INTEGER, name TEXT, salary REAL);
    INSERT INTO employee VALUES(1, 'John Doe', 50000.0);
  }
} {}

