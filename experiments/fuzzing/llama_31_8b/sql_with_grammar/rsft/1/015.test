set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-3.0 {
  execsql {
    CREATE TABLE customers(
        id INTEGER PRIMARY KEY,
        name TEXT NOT NULL,
        age INTEGER NOT NULL,
        email TEXT UNIQUE
    );
    INSERT INTO customers (id, name, age, email) VALUES (1, 'John Doe', 30, 'john@example.com');
    INSERT INTO customers (id, name, age, email) VALUES (2, 'Jane Doe', 25, 'jane@example.com');
  }
} {}

do_test delete-from-table-3.1 {
  execsql {
    DELETE FROM customers WHERE id = 1;
  }
} {}

finish_test