set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.0 {
  execsql {
    CREATE TABLE orders(order_id INTEGER, customer_id INTEGER, total REAL);
    INSERT INTO orders(order_id, customer_id, total) VALUES(1, 1, 100.0);
    INSERT INTO orders(order_id, customer_id, total) VALUES(2, 2, 200.0);
    INSERT INTO orders(order_id, customer_id, total) VALUES(3, 1, 300.0);
  }
} {}

do_test select-top-sale-3.1 {
  execsql {
    SELECT order_id, total
    FROM orders
    WHERE customer_id = 1
    ORDER BY total DESC
    LIMIT 1;
  }
} {3 300.0}

finish_test