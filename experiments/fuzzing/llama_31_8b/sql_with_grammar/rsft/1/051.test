set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.0 {
  execsql {
    CREATE TABLE orders(
      id INTEGER PRIMARY KEY,
      customer_name TEXT NOT NULL,
      order_total REAL NOT NULL
    );
    INSERT INTO orders(id, customer_name, order_total) VALUES(1, 'Jane Doe', 100.0);
    INSERT INTO orders(id, customer_name, order_total) VALUES(2, 'John Doe', 200.0);
  }
} {}

do_test select-order-3.1 {
  execsql {
    SELECT customer_name, order_total FROM orders WHERE id = 1 ORDER BY order_total DESC;
  }
} {Jane Doe 100.0}

finish_test