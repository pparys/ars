set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-sort-2.0 {
  execsql {
    CREATE TABLE numbers(id INTEGER PRIMARY KEY, num INTEGER);
    INSERT INTO numbers(id, num) VALUES(1, 10);
    INSERT INTO numbers(id, num) VALUES(2, 2);
    INSERT INTO numbers(id, num) VALUES(3, 100);
  }
} {}

do_test select-sort-2.1 {
  execsql {
    SELECT rowid, num FROM numbers ORDER BY num DESC LIMIT 1;
  }
} {3 100}

finish_test