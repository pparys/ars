set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test replace-price-1.1 {
  execsql {
    CREATE TABLE inventory (
      id INT,
      name TEXT,
      price REAL,
      stock INT
    );
    INSERT INTO inventory VALUES(1, 'Phone', 499.99, 50);
    INSERT INTO inventory VALUES(2, 'Laptop', 999.99, 20);
  }
} {}

do_test select-price-1.2 {
  execsql {
    SELECT price 
    FROM inventory 
    WHERE id = 1;
  }
} {499.99}

finish_test