set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-user-roles-1.0 {
  execsql {
    CREATE TABLE user_roles(
      user_id INTEGER PRIMARY KEY,
      role TEXT NOT NULL
    );
