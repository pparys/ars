set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
   CREATE TABLE books (
     id INTEGER,
     title TEXT,
     author TEXT,
     year INTEGER
   );
   INSERT INTO books VALUES(1, 'To Kill a Mockingbird', 'Harper Lee', 1960);
   INSERT INTO books VALUES(2, '1984', 'George Orwell', 1949);
   INSERT INTO books VALUES(3, 'The Great Gatsby', 'F Scott Fitzgerald', 1925);
  }
} {}

do_test select-books-1.1 {
  execsql {
    SELECT title, year FROM books ORDER BY year DESC LIMIT 1;
  }
} {'The Great Gatsby' 1925}

finish_test