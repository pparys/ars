set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.0 {
  execsql {
    CREATE TABLE products(category INTEGER, name TEXT, price REAL);
    INSERT INTO products(category, name, price) VALUES(1, 'Product A', 19.99);
    INSERT INTO products(category, name, price) VALUES(1, 'Product B', 9.99);
    INSERT INTO products(category, name, price) VALUES(2, 'Product C', 29.99);
