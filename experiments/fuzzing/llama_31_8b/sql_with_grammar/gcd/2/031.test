set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-3.0 {
  execsql {
    CREATE TABLE employees(
      id INTEGER PRIMARY KEY,
      name TEXT NOT NULL,
      email TEXT UNIQUE
    );
    INSERT INTO employees VALUES(1, 'John Doe', 'john@example.com');
  }
} {}

do_test update-3.1 {
  execsql {
    UPDATE employees
    SET name = 'Jane Doe', email = 'jane@example.com'
    WHERE id = 1;
  }
} {1 row}

finish_test