set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-1.0 {
  execsql {
    CREATE TABLE courses(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE students(id INTEGER PRIMARY KEY, name TEXT, course_id INTEGER,
      FOREIGN KEY course_id REFERENCES courses ON DELETE CASCADE);
    INSERT INTO courses VALUES(1, 'Math');
    INSERT INTO courses VALUES(2, 'Science');
    INSERT INTO students VALUES(1, 'Alice', 1);
    INSERT INTO students VALUES(2, 'Bob', 1);
    INSERT INTO students VALUES(3, 'Charlie', 2);
  }
} {}

do_test delete-course-1.1 {
  execsql {
    DELETE FROM courses WHERE id = 1;
  }
} {3}

finish_test