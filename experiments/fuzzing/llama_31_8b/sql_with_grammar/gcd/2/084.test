do_test setup-create-table-foreign-key-1.0 {
  execsql {
    CREATE TABLE categories(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE posts(id INTEGER PRIMARY KEY, title TEXT, category_id INTEGER, 
                      FOREIGN KEY categoryId REFERENCES categories);
    INSERT INTO categories(id, name) VALUES(1, 'category1');
    INSERT INTO posts(id, title, category_id) VALUES(1, 'post1', 1);
  }
} {}

