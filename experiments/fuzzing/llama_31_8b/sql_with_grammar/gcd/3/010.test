set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-keys-3.0 {
  execsql {
    CREATE TABLE customers (
      id INTEGER PRIMARY KEY,
      name TEXT,
      FOREIGN KEY id REFERENCES orders
    );
    CREATE TABLE orders (
      id INTEGER PRIMARY KEY,
      date DATE
    );
    INSERT INTO orders VALUES(1, DATEconvertutctimestamp);
    INSERT INTO customers VALUES(1, 'John Doe');
  }
} {}

do_test delete-order-3.1 {
  execsql {
    DELETE FROM orders 
    WHERE id = 1;
  }
} {}

finish_test