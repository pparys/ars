set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setupfk-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(order_id INTEGER PRIMARY KEY, customer_id INTEGER REFERENCES customers, product TEXT);
    INSERT INTO customers VALUES(1, 'John Doe');
    INSERT INTO orders VALUES(1, 1, 'Laptop');
    INSERT INTO orders VALUES(2, 1, 'Mouse');
  }
} {}

do_test insert-violates-fk-3.1 {
  execsql {
    SELECT name FROM customers WHERE id = 2;
  }
} {}
finish_test