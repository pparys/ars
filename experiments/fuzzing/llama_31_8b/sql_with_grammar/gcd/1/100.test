set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.0 {
  execsql {
    CREATE TABLE employees(
        id INTEGER PRIMARY KEY,
        name TEXT NOT NULL,
        department TEXT,
        salary REAL,
        manager_id INTEGER
    );
    INSERT INTO employees(id, name, department, salary) VALUES
        (101, 'John Smith', 'Engineering', 50000.0);
    INSERT INTO employees(id, name, department, salary) VALUES
        (102, 'Jane Doe', 'Sales', 60000.0);
  }
} {}

do_test update-foreign-key-violation-3.1 {
  execsql {
    UPDATE employees SET manager_id = 101 WHERE id = 101;
  }
} {1 {FOREIGN KEY constraint failed: employees (manager_id -> employees.id)} 
     		
	
   finish_test