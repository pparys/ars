set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-3.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, customer_name TEXT);
    CREATE TABLE orders(order_id INTEGER PRIMARY KEY, customer_id INTEGER, 
                       FOREIGN KEY fk_customer_id REFERENCES customers ON DELETE CASCADE);
    INSERT INTO customers VALUES(1, 'Company A');
    INSERT INTO customers VALUES(2, 'Company B');
    INSERT INTO orders VALUES(1, 1);
    INSERT INTO orders VALUES(2, 2);
  }
} {}

do_test select-order-3.1 {
  execsql {
    SELECT c.* FROM customers AS c
    ORDER BY customer_name DESC LIMIT 1;
  }
} {2 Company B}

finish_test