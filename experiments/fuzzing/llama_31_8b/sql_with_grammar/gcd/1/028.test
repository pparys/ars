set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-3.0 {
  execsql {
    CREATE TABLE orders(order_id INTEGER, customer_id INTEGER);
    CREATE TABLE customers(customer_id INTEGER, name TEXT);
    INSERT INTO orders(order_id, customer_id) VALUES(101, 1);
    INSERT INTO orders(order_id, customer_id) VALUES(102, 2);
    INSERT INTO customers(customer_id, name) VALUES(1, 'Alice');
    INSERT INTO customers(customer_id, name) VALUES(2, 'Bob');
  }
} {}

do_test select-orders-3.1 {
  execsql {
    SELECT o.*, c.* FROM orders AS o
    WHERE ocustomer_id = 1
    ORDER BY oorder_id DESC LIMIT 1;
  }
} {102 1 Alice}

finish_test