set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test "modify-opt-1" {
  execsql {
    CREATE TABLE abc(a INTEGER, b TEXT);
    INSERT INTO abc VALUES(1, 'ab');
    INSERT INTO abc VALUES(1, 'c');
    INSERT INTO abc VALUES(2, 'd');
  }
} {}

do_test "modify-opt-1.1" {
  execsql {
    UPDATE abc SET b = 'x' WHERE a = 1;
  }
} {1}

finish_test