set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-2.0 {
  execsql {
    CREATE TABLE departments(id INTEGER, name TEXT);
    CREATE TABLE employees(id INTEGER, name TEXT, department_id INTEGER REFERENCES departments);
    INSERT INTO departments(id, name) VALUES(201, 'Sales');
    INSERT INTO departments(id, name) VALUES(202, 'IT');
    INSERT INTO employees(id, name, department_id) VALUES(301, 'John', 201);
    INSERT INTO employees(id, name, department_id) VALUES(302, 'Mike', 202);
  }
} {}

do_test join-department-employees-2.1 {
  execsql {
    SELECT d.* FROM departments AS d
      ORDER BY d_id
      LIMIT 1;
  }
} {201 Sales}

finish_test