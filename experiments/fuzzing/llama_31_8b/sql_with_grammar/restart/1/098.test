set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-employees-1.0 {
  execsql {
    CREATE TABLE employees(id INTEGER, name TEXT, salary REAL);
    INSERT INTO employees(id, name, salary) VALUES(201, 'John', 50000);
    INSERT INTO employees(id, name, salary) VALUES(202, 'Jane', 60000);
  }
} {}

do_test select-employee-1.1 {
  execsql {
    SELECT name, salary FROM employees WHERE id = 201 ORDER BY salary LIMIT 1;
  }
} {John 50000}

finish_test