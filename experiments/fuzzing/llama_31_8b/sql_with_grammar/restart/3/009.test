set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-fk-2.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(order_id INTEGER, customer_id INTEGER, PRIMARY KEY objedn order_id);
    INSERT INTO customers(id, name) VALUES(1, 'Customer A');
    INSERT INTO customers(id, name) VALUES(2, 'Customer B');
    INSERT INTO orders(order_id, customer_id) VALUES(10, 1);
    INSERT INTO orders(order_id, customer_id) VALUES(20, 2);
    INSERT INTO orders(order_id, customer_id) VALUES(30, 1);
  }
} {}

do_test insert-violates-fk-2.1 {
  execsql {
    DELETE FROM customers WHERE id = 2;
    DELETE FROM orders WHERE customer_id = 2;
  }
} {}

finish_test