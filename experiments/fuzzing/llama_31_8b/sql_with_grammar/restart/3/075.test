set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE books(
      id INTEGER PRIMARY KEY,
      title TEXT NOT NULL,
      author TEXT
    );
  INSERT INTO books VALUES(1, 'The Great Gatsby', 'F. Scott Fitzgerald');
  INSERT INTO books VALUES(2, 'To Kill a Mockingbird', 'Harper Lee');
  }
} {}

do_test select-books-1.1 {
  execsql {
    SELECT title FROM books WHERE id > 1 ORDER BY title ASC;
  }
} {'The Great Gatsby' 'To Kill a Mockingbird'}

finish_test