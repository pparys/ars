set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-index-1.0 {
  execsql {
    CREATE TABLE prices(id INTEGER PRIMARY KEY, price DECIMAL);
    CREATE TABLE sales(id INTEGER, price_id INTEGER, FOREIGN KEY price_id REFERENCES prices);
    INSERT INTO prices(id, price) VALUES(1, 10.99);
    INSERT INTO prices(id, price) VALUES(2, 20.99);
    INSERT INTO sales(id, price_id) VALUES(101, 1);
    INSERT INTO sales(id, price_id) VALUES(102, 2);
  }
} {}

do_test select-prices-1.1 {
  execsql {
    SELECT prices.* 
    FROM prices 
    WHERE id = 1;
  }
} {1 10.99}

finish_test