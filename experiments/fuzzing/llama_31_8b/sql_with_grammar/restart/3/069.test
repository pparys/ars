set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-constraints-3.0 {
  execsql {
    CREATE TABLE customers(
      id    INTEGER PRIMARY KEY,
      name  TEXT NOT NULL,
      email TEXT UNIQUE
    );
    INSERT INTO customers(id, name, email) VALUES(1, 'John Doe', 'john@example.com');
    INSERT INTO customers(id, name, email) VALUES(2, 'Jane Doe', 'jane@example.com');
  }
} {}

do_test update-violates-unique-3.1 {
  execsql {
    UPDATE customers SET email = 'john@example.com' WHERE id = 2;
  }
} {1 {UNIQUE constraint failed: customers.email, customers.email failed: customers.email,}

finish_test