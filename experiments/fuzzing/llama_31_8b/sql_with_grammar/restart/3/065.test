set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-1.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(order_id INTEGER PRIMARY KEY, customer_id INTEGER, FOREIGN KEY customer_id REFERENCES customers ON DELETE CASCADE);
    INSERT INTO customers(id, name) VALUES(1, 'John Doe');
    INSERT INTO orders(order_id, customer_id) VALUES(101, 1);
  }
} {}

do_test select-orders-1.1 {
  execsql {
    SELECT name FROM customers WHERE id = 1;
    SELECT order_id FROM orders WHERE customer_id = 1;
  }
} {1 John Doe 101}

finish_test