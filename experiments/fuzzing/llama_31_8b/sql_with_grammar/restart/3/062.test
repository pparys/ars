set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.0 {
  execsql {
    CREATE TABLE customers(
      id INTEGER PRIMARY KEY,
      name TEXT NOT NULL,
      email TEXT UNIQUE
    );
    INSERT INTO customers(id, name, email) VALUES(101, 'John Doe', 'john@example.com');
    INSERT INTO customers(id, name, email) VALUES(102, 'Jane Doe', 'jane@example.com');
  }
} {}

