set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE SQLite(
      id INTEGER PRIMARY KEY,
      name TEXT NOT NULL,
      email TEXT
    );
  INSERT INTO SQLite(name, email) VALUES('John Smith', 'john.smith@example.com');
  }
} {}

do_test update-with-where-1.1 {
  execsql {
    UPDATE SQLite
    SET name = 'Jane Doe'
    WHERE id = 1 AND email = 'john.smith@example.com';
  }
} {}

finish_test