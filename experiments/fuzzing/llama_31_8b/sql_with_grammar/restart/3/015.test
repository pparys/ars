set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-foreign-key-1.0 {
  execsql {
    CREATE TABLE customers(id INTEGER PRIMARY KEY, name TEXT);
    CREATE TABLE orders(order_id INTEGER PRIMARY KEY, customer_id INTEGER, FOREIGN KEY customer_id REFERENCES customers ON DELETE CASCADE);
    INSERT INTO customers(id, name) VALUES(101, 'Alice');
    INSERT INTO customers(id, name) VALUES(102, 'Bob');
  }
} {}

do_test delete-customer-1.1 {
  execsql {
    DELETE FROM customers WHERE id = 102;
  }
} {}

finish_test