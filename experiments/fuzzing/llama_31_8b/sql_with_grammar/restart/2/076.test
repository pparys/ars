set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-tables-3.0 {
  execsql {
    CREATE TABLE customers(
      id INTEGER PRIMARY KEY,
      name TEXT NOT NULL,
      email TEXT UNIQUE
    );
    INSERT INTO customers VALUES(1, 'John Doe', 'johndoe@example.com');
    INSERT INTO customers VALUES(2, 'Jane Doe', 'janedoe@example.com');
  }
} {}

do_test delete-from-unique-3.1 {
  execsql {
    DELETE FROM customers WHERE email = 'johndoe@example.com';
  }
} {}

finish_test