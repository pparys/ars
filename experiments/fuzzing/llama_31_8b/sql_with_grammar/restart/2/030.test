set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE friends(id INTEGER, name TEXT, affiliation TEXT);
    INSERT INTO friends(id, name, affiliation) VALUES(1, 'Alice', 'Work');
    INSERT INTO friends(id, name, affiliation) VALUES(2, 'Bob', 'Family');
  }
} {}

do_test select-friend-1.1 {
  execsql {
    SELECT name, affiliation FROM friends WHERE id = 1;
  }
} {Alice Work}

finish_test