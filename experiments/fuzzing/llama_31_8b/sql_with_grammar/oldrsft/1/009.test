set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.1 {
  execsql {
    CREATE TABLE orders(
      id INTEGER,
      customer_id INTEGER,
      order_date DATE,
      total REAL
    );
    INSERT INTO orders VALUES(
      101, 1, '2020-01-01', 100.0
    );
    INSERT INTO orders VALUES(
      102, 1, '2020-01-15', 150.0
    );
    INSERT INTO orders VALUES(
      103, 2, '2020-02-01', 200.0
    );
  }
} {}

do_test select-orders-3.2 {
  execsql {
    SELECT id, customer_id, order_date, total
    FROM orders
    ORDER BY customer_id, order_date DESC
    LIMIT 1;
  }
} {102 1 2020-01-15 150.0}

finish_test