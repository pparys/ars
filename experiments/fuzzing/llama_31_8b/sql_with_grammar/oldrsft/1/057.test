set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE employees(id INTEGER, name TEXT, salary REAL);
    INSERT INTO employees(id, name, salary) VALUES(101, 'John', 5000.0);
    INSERT INTO employees(id, name, salary) VALUES(102, 'Jane', 6000.0);
    INSERT INTO employees(id, name, salary) VALUES(103, 'Bob', 7000.0);
  }
} {}

do_test select-top-1.1 {
  execsql {
    SELECT name, salary FROM employees ORDER BY salary DESC LIMIT 1;
  }
} {Bob 7000.0}

finish_test