set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.0 {
  execsql {
    CREATE TABLE employees (
      id INTEGER PRIMARY KEY,
      name TEXT,
      salary REAL,
      manager_id INTEGER
    );
    INSERT INTO employees VALUES(1, 'John', 50000.0, NULL);
    INSERT INTO employees VALUES(2, 'Alice', 60000.0, 1);
    INSERT INTO employees VALUES(3, 'Bob', 55000.0, 1);
  }
} {}

do_test select-manager-3.1 {
  execsql {
    SELECT name, salary
    FROM employees
    WHERE manager_id = 1;
  }
} {Alice 60000.0 Bob 55000.0}

finish_test