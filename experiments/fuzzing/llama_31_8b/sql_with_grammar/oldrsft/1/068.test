set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-emps-1.0 {
  execsql {
    CREATE TABLE emps(id INTEGER PRIMARY KEY, name TEXT, salary INTEGER, dept number);
    INSERT INTO emps VALUES(1, 'Alice', 10000, 10);
    INSERT INTO emps VALUES(2, 'Bob', 20000, 20);
  }
} {}

do_test select-dept-1.1 {
  execsql {
    SELECT name FROM emps WHERE dept = 10 ORDER BY id ASC LIMIT 1;
  }
} {Alice}

finish_test