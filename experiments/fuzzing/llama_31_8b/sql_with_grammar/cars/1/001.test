set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-3.0 {
  execsql {
    CREATE TABLE scores(id INTEGER PRIMARY KEY, team TEXT, score INTEGER);
    INSERT INTO scores VALUES(1, 'Team A', 10);
    INSERT INTO scores VALUES(2, 'Team B', 20);
  }
} {}

do_test select-top-scores-3.1 {
  execsql {
    SELECT team, score FROM scores ORDER BY score DESC LIMIT 1;
  }
} {Team B 20}

finish_test