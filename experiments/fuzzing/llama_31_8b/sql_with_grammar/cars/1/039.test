set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-sort-1.0 {
  execsql {
    CREATE TABLE numbers(id INTEGER, number REAL);
    INSERT INTO numbers VALUES(1, 10.5);
    INSERT INTO numbers VALUES(2, 0.5);
    INSERT INTO numbers VALUES(3, 5.2);
  }
} {}

do_test select-sort-1.1 {
  execsql {
    SELECT number FROM numbers ORDER BY number DESC LIMIT 1;
  }
} {10.5}

finish_test