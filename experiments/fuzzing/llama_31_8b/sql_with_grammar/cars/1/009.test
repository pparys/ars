set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-users-3.0 {
  execsql {
    CREATE TABLE users(id INTEGER, name TEXT, email TEXT);
    INSERT INTO users(id, name, email) VALUES(301, 'Alice', 'alice@example.com');
    INSERT INTO users(id, name, email) VALUES(302, 'Bob', 'bob@example.com');
  }
} {}

do_test combined-query-3.1 {
  execsql {
    SELECT name, email 
    FROM users 
    WHERE id = 301 OR email = 'bob@example.com';
  }
} {Alice alice@example.com}

finish_test