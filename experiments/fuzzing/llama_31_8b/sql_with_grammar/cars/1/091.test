set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-quotes-1.0 {
  execsql {
    CREATE TABLE quotes(author TEXT PRIMARY KEY, quote TEXT);
    INSERT INTO quotes(author, quote) VALUES('Friedrich Nietzsche', 'God is dead.');
    INSERT INTO quotes(author, quote) VALUES('Albert Einstein', 'The universe is not governed by utility.');
  }
} {}

do_test select-famous-quote-1.1 {
  execsql {
    SELECT quote FROM quotes WHERE author = 'Friedrich Nietzsche';
  }
} {God is dead.}

finish_test