set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-employees-1.0 {
  execsql {
    CREATE TABLE employees(id INTEGER PRIMARY KEY, name TEXT, salary REAL);
    INSERT INTO employees VALUES(1, 'John', 5000.0);
    INSERT INTO employees VALUES(2, 'Mary', 6000.0);
    INSERT INTO employees VALUES(3, 'Bob', 4000.0);
  }
} {}

do_test select-top-1.1 {
  execsql {
    SELECT name, salary FROM employees ORDER BY salary DESC LIMIT 1;
  }
} {Mary 6000.0}

finish_test