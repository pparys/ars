set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE customer (
      id INTEGER PRIMARY KEY,
      name TEXT NOT NULL,
      email TEXT UNIQUE
    );
    INSERT INTO customer (name, email) VALUES('John Doe', 'john@example.com');
  }
} {}

do_test update-name-1.1 {
  execsql {
    UPDATE customer SET name = 'Jane Doe' WHERE email = 'john@example.com';
  }
} {}

finish_test