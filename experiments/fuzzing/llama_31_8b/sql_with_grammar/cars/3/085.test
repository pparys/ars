set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.0 {
  execsql {
    CREATE TABLE employees(id INTEGER, name TEXT, salary REAL, manager_id INTEGER);
    INSERT INTO employees(id, name, salary, manager_id) VALUES(101, 'John Doe', 50000.0, NULL);
    INSERT INTO employees(id, name, salary, manager_id) VALUES(102, 'Jane Doe', 60000.0, 101);
    INSERT INTO employees(id, name, salary, manager_id) VALUES(103, 'Alice Smith', 70000.0, 101);
  }
} {}

do_test select-manager-3.1 {
  execsql {
    SELECT name, salary FROM employees WHERE manager_id = 101;
  }
} {Jane Doe 60000.0 Alice Smith 70000.0}

finish_test