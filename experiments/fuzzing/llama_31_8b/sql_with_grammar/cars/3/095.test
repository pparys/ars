set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-3.0 {
  execsql {
    CREATE TABLE employees(
      id INTEGER PRIMARY KEY AUTOINCREMENT, 
      name TEXT,
      department TEXT,
      salary REAL
    );

    INSERT INTO employees(name, department, salary) 
    VALUES('John Doe', 'Sales', 50000.0);
    INSERT INTO employees(name, department, salary) 
    VALUES('Jane Doe', 'Marketing', 60000.0);
    INSERT INTO employees(name, department, salary) 
    VALUES('Bob Smith', 'IT', 70000.0);
  }
} {}

do_test select-employee-3.1 {
  execsql {
    SELECT name, department, salary 
    FROM employees 
    WHERE salary > 55000 AND department = 'Marketing';
  }
} {Jane Doe Marketing 60000.0}

finish_test