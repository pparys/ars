set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-2.0 {
  execsql {
    CREATE TABLE books(id INTEGER PRIMARY KEY, title TEXT NOT NULL, author TEXT);
    INSERT INTO books(title, author) VALUES('Book 1', 'Author 1');
    INSERT INTO books(title, author) VALUES('Book 2', 'Author 2');
  }
} {}

do_test select-author-2.1 {
  execsql {
    SELECT author FROM books WHERE title = 'Book 2';
  }
} {Author 2}

finish_test