set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test "create-explain-1.0" {
  execsql {
    CREATE TABLE employees(id INTEGER, name TEXT, department TEXT);
    INSERT INTO employees VALUES(1, 'John Doe', 'Sales');
