set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-1.0 {
  execsql {
    CREATE TABLE books(id INTEGER, title TEXT, author TEXT);
    INSERT INTO books VALUES(1, 'To Kill a Mockingbird', 'Harper Lee');
    INSERT INTO books VALUES(2, '1984', 'George Orwell');
    INSERT INTO books VALUES(3, 'Pride and Prejudice', 'Jane Austen');
  }
} {}

do_test select-books-1.1 {
  execsql {
    SELECT title, author FROM books WHERE id = 2;
  }
} {1984 George Orwell}

finish_test