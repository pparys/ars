set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-data-2.0 {
  execsql {
    CREATE TABLE books(id INTEGER, title TEXT, author TEXT);
    INSERT INTO books(title, author) VALUES('The Great Gatsby', 'F. Scott Fitzgerald');
    INSERT INTO books(title, author) VALUES('1984', 'George Orwell');
  }
} {}

do_test select-book-2.1 {
  execsql {
    SELECT title, author FROM books WHERE author = 'F. Scott Fitzgerald';
  }
} {The Great Gatsby F. Scott Fitzgerald}

finish_test