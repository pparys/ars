set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-and-data-3.0 {
  execsql {
    CREATE TABLE employees(id INTEGER, name TEXT, department TEXT);
    INSERT INTO employees(id, name, department) VALUES(101, 'John Smith', 'Sales');
    INSERT INTO employees(id, name, department) VALUES(102, 'Jane Doe', 'Marketing');
  }
} {}

do_test select-department-3.1 {
  execsql {
    SELECT department FROM employees WHERE name = 'Jane Doe';
  }
} {Marketing}

finish_test