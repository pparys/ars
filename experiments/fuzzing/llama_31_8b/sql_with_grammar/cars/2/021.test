set testdir [file dirname $argv0]
source $testdir/tester.tcl

do_test setup-table-3.0 {
  execsql {
    CREATE TABLE IF NOT EXISTS storage(id INTEGER PRIMARY KEY, item TEXT, quantity INTEGER);
    INSERT INTO storage(id, item, quantity) VALUES(1, 'Book', 10);
    INSERT INTO storage(id, item, quantity) VALUES(2, 'Calculator', 50);
  }
} {}

do_test update-stock-3.1 {
  execsql {
    UPDATE storage SET quantity = 0 WHERE id = 1;
    SELECT quantity FROM storage WHERE id = 2;
  }
} {50}

finish_test