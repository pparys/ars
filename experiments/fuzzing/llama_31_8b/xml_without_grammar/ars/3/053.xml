<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book*, author*)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    id ID #REQUIRED
    title CDATA #REQUIRED
    author-ref IDREF #IMPLIED>
  <!ATTLIST author
    id ID #REQUIRED
    name CDATA #REQUIRED
    bio CDATA #IMPLIED>
]>
<library>
  <book id="bk101" title="Book One" author-ref="a101">This is a book.</book>
  <author id="a101" name="John Smith" bio="Author Bio"></author>
  <book id="bk102" title="Book Two">This is another book.</book>
  <author id="a102" name="Jane Doe" bio="Author Bio 2"/>
</library>