<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE customers [
  <!ELEMENT customers (customer*)>
  <!ELEMENT customer (name,address)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ATTLIST customer
    id CDATA #REQUIRED
    type (home|work) "home">
]>
<customers>
  <customer id="1" type="home">
    <name>John Doe</name>
    <address>123 Main St, Anytown, USA</address>
  </customer>
  <customer id="2" type="work">
    <name>Jane Doe</name>
    <address>456 Office Bldg, Anytown, USA</address>
  </customer>
</customers>