<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (author+,product*)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT product (#PCDATA,price?,description?)>
  <!ATTLIST author
    name CDATA #REQUIRED
    email CDATA #IMPLIED>
  <!ATTLIST product
    id CDATA #REQUIRED
    name CDATA #REQUIRED>
]>
<catalog>
  <author name="John Doe" email="john@example.com">
    <product id="P001" name="Product 1"/>
    <product id="P002" name="Product 2" price="$19.99">
      <description>This is a description of product 2.</description>
    </product>
  </author>
  <author name="Jane Doe" email="jane@example.com">
    <product id="P003" name="Product 3"/>
  </author>
</catalog>