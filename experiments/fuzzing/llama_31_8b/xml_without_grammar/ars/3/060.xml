<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (category*)>
  <!ELEMENT category (product*)>
  <!ELEMENT product (price, description*)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ATTLIST category
    id CDATA #REQUIRED
    name CDATA #REQUIRED
  >
  <!ATTLIST product
    id CDATA #REQUIRED
    name CDATA #REQUIRED
  >
]>
<catalog>
  <category id="cat-1" name="Electronics">
    <product id="prod-1" name="Smartphone">
      <price>$999</price>
      <description>High-end smartphone with advanced features.</description>
    </product>
    <product id="prod-2" name="Tablet">
      <price>$699</price>
      <description>High-resolution tablet with advanced features.</description>
    </product>
  </category>
  <category id="cat-2" name="Fashion">
    <product id="prod-3" name="Shirt">
      <price>$19.99</price>
      <description>Cotton shirt in different colors.</description>
    </product>
  </category>
</catalog>