<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE person [
  <!ELEMENT person (#PCDATA)>
  <!ELEMENT address EMPTY>
  <!ELEMENT phone EMPTY>
  <!ELEMENT email EMPTY>
  <!ATTLIST person
    name CDATA #REQUIRED
    age CDATA #IMPLIED>
  <!ATTLIST address
    street CDATA #REQUIRED
    city CDATA #REQUIRED
    state CDATA #IMPLIED
    zip CDATA #REQUIRED>
  <!ATTLIST phone
    type CDATA #REQUIRED
    number CDATA #REQUIRED>
  <!ATTLIST email
    type CDATA #REQUIRED
    address CDATA #REQUIRED>
]>
<person name="John Doe" age="30">
  <address street="123 Main St" city="Anytown" state="CA" zip="12345"/>
  <phone type="home" number="555-1234"/>
  <email type="personal" address="john.doe@example.com"/>
</person>