<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (book+)>
  <!ELEMENT book (#PCDATA|author|year+)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT year (#PCDATA)>
  <!ATTLIST book
    id  ID  #REQUIRED>
]>
<books>
  <book id="BK1">
    Book Title 1 by John Doe, published in 1999.
  </book>
  <book id="BK2">
    Book Title 2 by Jane Doe, published in 2000 and 2001.
    <author>Jane Doe</author>
    <year>2000</year>
    <year>2001</year>
  </book>
</books>