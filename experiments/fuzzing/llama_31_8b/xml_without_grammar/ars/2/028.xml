<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book+, author+)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    title CDATA #REQUIRED
    author-ref IDREF #IMPLIED>
  <!ATTLIST author
    name CDATA #REQUIRED
    email CDATA #IMPLIED>
]>
<library>
  <book title="Introduction to Java" author-ref="smith"/>
  <book title="Python Programming" author-ref="john.doe"/>
  <author name="John Smith" email="jsmith@email.com" />
  <author name="Jane Doe" email="jane.doe@email.com"/>
</library>