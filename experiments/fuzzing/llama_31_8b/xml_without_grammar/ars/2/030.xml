<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (author, book*)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT book (title, author, publicationDate, synopsis)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT publicationDate (#PCDATA)>
  <!ELEMENT synopsis (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    language CDATA #IMPLIED
    status (published|draft) "published"
  >
]>
<library>
  <author>Jane Doe</author>
  <book id="bk101" language="English" status="published">
    <title>The Great Gatsby</title>
    <author>F. Scott Fitzgerald</author>
    <publicationDate>1925-04-10</publicationDate>
    <synopsis>This is a novel about the American Dream.</synopsis>
  </book>
  <book id="bk102" language="Spanish" status="draft">
    <title>El Vijeo Grande</title>
    <author>Not Given</author>
    <publicationDate>2020-12-15</publicationDate>
    <synopsis>This is a novel about the Latin American Dream.</synopsis>
  </book>
</library>