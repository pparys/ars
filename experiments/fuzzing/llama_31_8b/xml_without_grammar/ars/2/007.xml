<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*)>
  <!ELEMENT product (description,price+,category)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT category (#PCDATA)>
  <!ATTLIST product
    id CDATA #REQUIRED
    type ( book | software | hardware ) #REQUIRED>
  <!ATTLIST catalog
    version CDATA #IMPLIED
    author CDATA #IMPLIED>
]>
<catalog version="1.0" author="John Doe">
  <product id="P001" type="book">
    <description>This is a book.</description>
    <price>$19.99</price>
    <category>Science Fiction</category>
  </product>
  <product id="P002" type="software">
    <description>This is a software.</description>
    <price>$9.99</price>
    <category>Development Tool</category>
  </product>
  <product id="P003" type="hardware">
    <description>This is a hardware.</description>
    <price>$29.99</price>
    <category>Mobile Device</category>
  </product>
</catalog>