<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE products [
  <!ELEMENT products (product*)>
  <!ELEMENT product (name,description,price,shipping*)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT shipping (#PCDATA)>
  <!ATTLIST product
    id CDATA #REQUIRED
  >
]>
<products>
  <product id="1">
    <name>Product 1</name>
    <description>Best Selling Product</description>
    <price>$99.99</price>
    <shipping>Ship via Priority Mail</shipping>
  </product>
  <product id="2">
    <name>Product 2</name>
    <description>Average Product</description>
    <price>$39.99</price>
    <shipping>Ship via Standard Mail</shipping>
  </product>
</products>