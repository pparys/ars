<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*)>
  <!ELEMENT product (description,price,category)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT category (#PCDATA)>
  <!ATTLIST product
    id CDATA #REQUIRED
    author CDATA #REQUIRED>
]>
<catalog>
  <product id="1" author="John Doe">
    <description>This is a great product.</description>
    <price>19.99</price>
    <category> Electronics</category>
  </product>
  <product id="2" author="Jane Doe">
    <description>This is another great product.</description>
    <price>9.99</price>
    <category> Books</category>
  </product>
</catalog>