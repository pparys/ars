<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*)>
  <!ELEMENT product (description, price)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ATTLIST product
    id    CDATA   #REQUIRED
    name  CDATA   #REQUIRED>
]>
<catalog>
  <product id="p1" name="Product 1">
    <description>This is product 1 description.</description>
    <price>$9.99</price>
  </product>
  <product id="p2" name="Product 2">
    <description>This is product 2 description.</description>
    <price>$19.99</price>
  </product>
</catalog>