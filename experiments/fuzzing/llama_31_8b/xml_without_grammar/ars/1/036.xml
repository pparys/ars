<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE customers [
  <!ELEMENT customers (customer)*>
  <!ELEMENT customer (name, address, phone, order+)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ELEMENT order (#PCDATA)>
  <!ATTLIST customer
    id ID #REQUIRED
  >
]>
<customers>
  <customer id="CUST-123">
    <name>John Doe</name>
    <address>123 Main St</address>
    <phone>555-1234</phone>
    <order>Order 1: Product A, 2 units</order>
    <order>Order 2: Product B, 1 unit</order>
  </customer>
  <customer id="CUST-456">
    <name>Jane Smith</name>
    <address>456 Broadway</address>
    <phone>555-5678</phone>
    <order>Order 3: Product C, 3 units</order>
  </customer>
</customers>