<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (item*)>
  <!ELEMENT item (description,price,tags)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT tags (#PCDATA)>
  <!ATTLIST item
    id CDATA #REQUIRED
    type CDATA #IMPLIED>
]>
<catalog>
  <item id="1" type="product">
    <description>This is a new product.</description>
    <price>19.99</price>
    <tags> electronics, gadgets </tags>
  </item>
  <item id="2" type="service">
    <description>Consulting Service.</description>
    <price>50.00</price>
    <tags> consulting, services </tags>
  </item>
</catalog>