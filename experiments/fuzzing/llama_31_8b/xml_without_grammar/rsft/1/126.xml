<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book*, author*, category*)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT category (#PCDATA)>
  <!ATTLIST book
    title CDATA #REQUIRED
    author CDATA #IMPLIED
    year CDATA #IMPLIED
  >
  <!ATTLIST author
    name CDATA #REQUIRED
  >
  <!ATTLIST category
    name CDATA #REQUIRED
  >
]>
<library>
  <book title="Programming" author="John Doe" year="2020"/>
  <book title="Data Structures" year="2015"/>
  <author name="Jane Doe"/>
  <category name="Computer Science"/>
  <category name="Mathematics"/>
</library>