<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (store*)>
  <!ELEMENT store (product*, manager)>
  <!ELEMENT product (#PCDATA)>
  <!ELEMENT manager (#PCDATA)>
  <!ATTLIST store
    id CDATA #REQUIRED
  >
  <!ATTLIST product
    id CDATA #REQUIRED
  >
]>
<catalog>
  <store id="1">
    <product id="P1">Product 1</product>
    <product id="P2">Product 2</product>
    <manager>John Doe</manager>
  </store>
  <store id="2">
    <product id="P3">Product 3</product>
    <manager>Jane Doe</manager>
  </store>
</catalog>