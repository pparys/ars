  <!ELEMENT description (#PCDATA)>
  <!ELEMENT quantity (#PCDATA)>
  <!ATTLIST item
    id CDATA #REQUIRED
    price CDATA #IMPLIED>
]>
<item id="ABC1234" price="19.99">
  <title>Widget</title>
