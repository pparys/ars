<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE inventory [
  <!ELEMENT inventory (item*)>
  <!ELEMENT item (description, price, quantity)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT quantity (#PCDATA)>
  <!ATTLIST item
    id CDATA #REQUIRED>
]>
<inventory>
  <item id="1">
    <description>This is a leather shoe.</description>
    <price>99.99</price>
    <quantity>50</quantity>
  </item>
  <item id="2">
    <description>This is a cotton shirt.</description>
    <price>29.99</price>
    <quantity>75</quantity>
  </item>
</inventory>