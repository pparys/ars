<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book*)>
  <!ELEMENT book (author, title, publication-date)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT publication-date (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    genre CDATA #IMPLIED>
]>
<library>
  <book id="123" genre="Fiction">
    <author>John Doe</author>
    <title>The Great Novel</title>
    <publication-date>2010-01-01</publication-date>
  </book>
  <book id="456" genre="Non-Fiction">
    <author>Jane Smith</author>
    <title>The Facts</title>
    <publication-date>2015-06-01</publication-date>
  </book>
</library>