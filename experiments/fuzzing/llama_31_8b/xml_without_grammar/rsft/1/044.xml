<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (#PCDATA)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT chapter (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    title CDATA #REQUIRED
    year CDATA #IMPLIED>
  <!ATTLIST author
    name CDATA #IMPLIED
    email CDATA #IMPLIED>
]>
<library>
  <book id="BK001" title="The Great Gatsby" year="1925">
    <author name="F. Scott Fitzgerald" email="fscott@gmail.com"/>
    <chapter num="1">Introduction</chapter>
    <chapter num="2">Story begins</chapter>
  </book>
  <book id="BK002" title="War and Peace">
    <author name="Leo Tolstoy"/>
    <chapter num="1">Introduction and beginnings</chapter>
    <chapter num="2">Peace</chapter>
  </book>
</library>