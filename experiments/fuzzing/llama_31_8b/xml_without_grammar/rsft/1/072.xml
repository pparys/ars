<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book+)>
  <!ELEMENT book (author, title, publication, details*)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT publication (#PCDATA)>
  <!ELEMENT details EMPTY>
  <!ATTLIST details
    type CDATA #REQUIRED>
  <!ATTLIST book
    id CDATA #REQUIRED>
]>
<library>
  <book id="1">
    <author>John Smith</author>
    <title>XML Generation Basics</title>
    <publication>2022</publication>
    <details type="fiction"/>
  </book>
  <book id="2">
    <author>Jane Doe</author>
    <title>XML Data Visualization</title>
    <publication>2023</publication>
    <details type="non-fiction" status="recommended"/>
  </book>
</library>