<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (author+, book+)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST author
    id ID #REQUIRED
  >
  <!ATTLIST book
    title CDATA #REQUIRED
    year CDATA #REQUIRED
  >
]>
<books>
  <author id="A1">John Doe</author>
  <author id="A2">Jane Doe</author>
  <book title="XML Book" year="2024">
    <author ref="A1"/>
    <author ref="A2"/>
  </book>
  <book title="Python Book" year="2023">
    <author ref="A1"/>
  </book>
</books>