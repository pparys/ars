<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (author+, book*)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST author
    id CDATA #REQUIRED
    name CDATA #REQUIRED>
  <!ATTLIST book
    id CDATA #REQUIRED
    title CDATA #REQUIRED>
]>
<library>
  <author id="1" name="John Doe"/>
  <author id="2" name="Jane Doe"/>
  <book id="B01" title="Introduction to XML"/>
  <book id="B02" title="Mastering XML"/>
</library>