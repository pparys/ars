<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (author+,book+)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST author
    name CDATA #REQUIRED
    birthyear CDATA #IMPLIED>
  <!ATTLIST book
    title CDATA #REQUIRED
    year CDATA #IMPLIED>
]>
<library>
  <author name="J.K. Rowling" birthyear="1965">
    <book title="Harry Potter and the Philosopher's Stone" year="1997"/>
    <book title="Harry Potter and the Chamber of Secrets" year="1998"/>
  </author>
  <author name="J.R.R. Tolkien" birthyear="1892">
    <book title="The Hobbit" year="1937"/>
    <book title="The Lord of the Rings" year="1954"/>
  </author>
  <book title="The Little Prince" year="1943"/>
</library>