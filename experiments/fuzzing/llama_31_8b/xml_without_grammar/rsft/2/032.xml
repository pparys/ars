<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*)>
  <!ELEMENT product (description, price, category)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT category (#PCDATA)>

  <!ATTLIST catalog
    version CDATA #REQUIRED
    author CDATA #IMPLIED>

  <!ATTLIST product
    id ID #REQUIRED
    releaseDate CDATA #IMPLIED>
]>
<catalog version="2.0" author="John Doe">
  <product id="prod001">
    <description> Sony Camera </description>
    <price> 1500.99 </price>
    <category> Electronics </category>
  </product>
  <product id="prod002">
    <description> iPhone 14 </description>
    <price> 899.99 </price>
    <category> Mobile Phone </category>
  </product>
</catalog>