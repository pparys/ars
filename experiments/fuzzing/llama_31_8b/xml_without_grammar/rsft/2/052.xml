<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (book*)>
  <!ELEMENT book (#PCDATA | author | title)*>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT title (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    year CDATA #IMPLIED
  >
]>
<books>
  <book id="1">This is a book.</book>
  <book id="2">
    <title>A Beautiful Dream</title>
    <author>John Doe</author>
  </book>
</books>