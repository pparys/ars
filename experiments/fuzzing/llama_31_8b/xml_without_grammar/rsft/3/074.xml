<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE employees [
  <!ELEMENT employees (employee*)>
  <!ELEMENT employee (name, address, phone)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ATTLIST employee
    id CDATA #REQUIRED
    type (work|personal) "work"
  >
]>
<employees>
  <employee id="1" type="work">
    <name>John Doe</name>
    <address>123 Main St</address>
    <phone>123-456-7890</phone>
  </employee>
  <employee id="2" type="personal">
    <name>Jane Doe</name>
    <address>456 Elm St</address>
    <phone>987-654-3210</phone>
  </employee>
</employees>