      <title>
        Book B
      </title>
      <year>
        2021
      </year>
    </books>
  </author>
  <author id="2">
    <name>
      Jane Doe
    </name>
    <books>
      <title>
        Book C
      </title>
      <year>
        2022
      </year>
    </books>
  </author>
  <publisher id="P1">
    <name>
      XYZ Publishing
    </name>
    <address>
      123 Main St
    </address>
  </publisher>
  <publisher id="P2">
