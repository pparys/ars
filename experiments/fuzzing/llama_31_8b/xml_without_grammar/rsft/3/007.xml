  <!ELEMENT author (name,books+)> 
  <!ELEMENT books (title+,year+)> 
  <!ELEMENT publisher (name,address+)> 
  <!ELEMENT name (#PCDATA)> 
  <!ELEMENT title (#PCDATA)> 
  <!ELEMENT year (#PCDATA)> 
  <!ELEMENT address (#PCDATA)>
  <!ATTLIST author
    id CDATA #IMPLIED
  >
  <!ATTLIST publisher
    id CDATA #IMPLIED
  >
]>
<library>
