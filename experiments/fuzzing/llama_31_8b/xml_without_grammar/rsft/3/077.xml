<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (author, books)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT books (book+)>
  <!ELEMENT book (#PCDATA)>

  <!ATTLIST book
    id CDATA #REQUIRED
    title CDATA #REQUIRED
    author CDATA #IMPLIED>
]>
<library>
  <author>John Doe</author>
  <books>
    <book id="bk101" title="XML for Beginners" author="John Doe"/>
    <book id="bk102" title="XML for Advanced"/>
  </books>
</library>