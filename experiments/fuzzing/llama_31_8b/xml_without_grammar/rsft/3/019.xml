<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE employees [
  <!ELEMENT employees (employee*)>
  <!ELEMENT employee (name, position, address)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT position (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ATTLIST employee
    id CDATA #REQUIRED
  >
  <!ATTLIST employee
    name CDATA #IMPLIED
  >
]>
<employees>
