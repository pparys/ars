    <name>Jane Doe</name>
    <position>Manager</position>
    <address>123 Main St, Anytown, USA</address>
  </employee>
  <employee id="E-102">
    <name>John Smith</name>
    <position>Engineer</position>
    <address>456 Elm St, Othertown, USA</address>
    <name> Alternate Name</name>
  </employee>
</employees>