<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE employees [
  <!ELEMENT employees (employee*)>
  <!ELEMENT employee (name, address, phone)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ATTLIST employee
     id CDATA #REQUIRED
     department CDATA #REQUIRED>
  <!ATTLIST address
     street CDATA #REQUIRED
     city CDATA #REQUIRED
     state CDATA #IMPLIED
     zip CDATA #IMPLIED>
  <!ATTLIST phone
     number CDATA #REQUIRED
     type CDATA #IMPLIED>
]>
<employees>
  <employee id="E001" department="Sales">
    <name>John Doe</name>
    <address street="123 Main St" city="Anytown" state="CA" zip="12345">
      <phone number="123-456-7890" type="Mobile"/>
      <phone number="987-654-3210" type="Office"/>
    </address>
  </employee>
  <employee id="E002" department="Marketing">
    <name>Jane Smith</name>
    <address street="456 Elm St" city="Othertown" state="NY">
      <phone number="555-555-5555"/>
    </address>
  </employee>
</employees>