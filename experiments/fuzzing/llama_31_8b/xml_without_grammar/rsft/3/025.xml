<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book+)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    author CDATA #IMPLIED>
]>
<library>
  <book id="book1" author="J.K. Rowling">Harry Potter and the Philosopher's Stone</book>
  <book id="book2" author="J.R.R. Tolkien">The Lord of the Rings</book>
  <book id="book3">Pride and Prejudice</book>
</library>