<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE root [

  <!ELEMENT root (employee+)>
  <!ELEMENT employee (name, address, phone)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (street, city, state, zip)>
  <!ELEMENT street (#PCDATA)>
  <!ELEMENT city (#PCDATA)>
  <!ELEMENT state (#PCDATA)>
  <!ELEMENT zip (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>

  <!ATTLIST root
    id ID #REQUIRED
  >
  <!ATTLIST employee
    id ID #REQUIRED
    role CDATA #IMPLIED
  >
]>
<root id='root1'>
  <employee id='employee1' role='manager'>
    <name>John Doe</name>
    <address>
      <street>123 Main St</street>
      <city>New York</city>
      <state>NY</state>
      <zip>10001</zip>
    </address>
    <phone>123-456-7890</phone>
  </employee>
  <employee id='employee2' role='developer'>
    <name>Jane Doe</name>
    <address>
      <street>456 Elm St</street>
      <city>Los Angeles</city>
      <state>CA</state>
      <zip>90001</zip>
    </address>
    <phone>987-654-3210</phone>
  </employee>
</root>