<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*, category*)>
  <!ELEMENT product (#PCDATA | price | description)*>
  <!ELEMENT category (#PCDATA)>
  <!ATTLIST product
    id ID #REQUIRED
    description CDATA #IMPLIED>
  <!ATTLIST category
    name CDATA #REQUIRED>
]>
<catalog>
  <product id="prod1">Apple Watch</product>
  <price>299.99</price>
  <description>A smartwatch from Apple.</description>
  <product id="prod2">Samsung TV</product>
  <price>1299.99</price>
  <description>A 4K TV from Samsung.</description>
  <category name="Electronics"/>
  <category name="Fashion"/>
</catalog>