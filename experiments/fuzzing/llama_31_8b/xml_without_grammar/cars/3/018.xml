<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book*, author*)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author ( firstName, lastName )>
  <!ELEMENT firstName (#PCDATA)>
  <!ELEMENT lastName (#PCDATA)>
  <!ATTLIST book
    title CDATA #IMPLIED
    year CDATA #IMPLIED
    author-ref IDREF #IMPLIED>
  <!ATTLIST author
    id ID #REQUIRED>
]>
<library>
  <author id="author1">
    <firstName>John</firstName>
    <lastName>Doe</lastName>
  </author>
  <book title="To Kill a Mockingbird" year="1960" author-ref="author1">This is a description of the book.</book>
  <author id="author2">
    <firstName>Jane</firstName>
    <lastName>Bond</lastName>
  </author>
  <book title="1984" year="1949" author-ref="author2">This is a description of the book.</book>
</library>