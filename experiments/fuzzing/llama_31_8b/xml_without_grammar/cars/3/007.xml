<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book*, author+)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    title CDATA #REQUIRED>
  <!ATTLIST author
    id CDATA #REQUIRED
    name CDATA #REQUIRED>
]>
<library>
  <book id="bk101" title="The History of XML, Part 1"/>
  <book id="bk102" title="The History of XML, Part 2"/>
  <author id="a1" name="John Smith">
    <book id="bk101" title="The History of XML, Part 1"/>
  </author>
  <author id="a2" name="Jane Doe">
    <book id="bk102" title="The History of XML, Part 2"/>
  </author>
</library>