<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (item*)>
  <!ELEMENT item (description, price, availability*)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT availability (#PCDATA)>
  <!ATTLIST item
    id ID #REQUIRED
    name CDATA #REQUIRED>
]>
<catalog>
  <item id="1" name="Product A">
    <description>This is product A.</description>
    <price>$20.99</price>
    <availability>In stock</availability>
    <availability>Out of stock</availability>
  </item>
  <item id="2" name="Product B">
    <description>This is product B.</description>
    <price>$15.99</price>
    <availability>Not available</availability>
  </item>
</catalog>