<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (author+, book+)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST author
    id CDATA #REQUIRED
    name CDATA #REQUIRED>
  <!ATTLIST book
    id CDATA #REQUIRED
    title CDATA #REQUIRED>
]>
<library>
  <author id="1" name="John Doe"/>
  <author id="2" name="Jane Doe"/>
  <book id="1" title="To Kill a Mockingbird"/>
  <book id="2" title="1984">
    <author ref="1"/>
  </book>
  <book id="3" title="Pride and Prejudice">
    <author ref="2"/>
  </book>
</library>