<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE book [
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT chapter (#PCDATA)>
  <!ELEMENT paragraph (#PCDATA)>
  <!ATTLIST book
    title CDATA #REQUIRED
    author CDATA #IMPLIED>
  <!ATTLIST chapter
    number CDATA #REQUIRED>
]>
<book title="Harry Potter" author="J.K. Rowling">
  <chapter number="1">
