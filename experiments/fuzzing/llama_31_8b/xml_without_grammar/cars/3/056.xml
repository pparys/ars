<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (category*)>
  <!ELEMENT category (product*)>
  <!ELEMENT product (price,description)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ATTLIST category
    id CDATA #REQUIRED
    name CDATA #REQUIRED>
  <!ATTLIST product
    id CDATA #REQUIRED
    name CDATA #REQUIRED>
]>
