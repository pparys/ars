<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (item*)>
  <!ELEMENT item (name, price, description*)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ATTLIST item
    id CDATA #REQUIRED
  >
  <!ATTLIST price
    currency CDATA #IMPLIED
  >
]>
<catalog>
  <item id="1">
    <name>Product A</name>
    <description>This is product A</description>
    <price currency="USD">19.99</price>
  </item>
  <item id="2">
    <name>Product B</name>
    <description>This is product B</description>
    <price currency="EUR">14.99</price>
  </item>
</catalog>