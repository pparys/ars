<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE libraries [
  <!ELEMENT libraries (book*)>
  <!ELEMENT book (author+, summary?, tags)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT summary (#PCDATA)>
  <!ELEMENT tags (tag+)> 
  <!ELEMENT tag (#PCDATA)>  
  <!ATTLIST book  
    id CDATA #REQUIRED    
    date CDATA #IMPLIED      
    >
]>
<libraries>
  <book id="book1" date="2022-01-01">
    <author>John Doe</author>
    <author>Jane Doe</author>
    <summary>This is a great book.</summary>
    <tags><tag>fiction</tag><tag>novel</tag></tags>
  </book>
  <book id="book2">
    <author>Richard Smith</author>
    <summary>This is another great book.</summary>
    <tags><tag>non-fiction</tag><tag>biography</tag></tags>
  </book>
</libraries>