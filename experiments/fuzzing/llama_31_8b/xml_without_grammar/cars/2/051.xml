<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
<!ELEMENT catalog (store+)>
<!ELEMENT store (product+, employee+)>
<!ELEMENT product (#PCDATA)>
<!ELEMENT employee (#PCDATA)>
<!ATTLIST store
  id CDATA #REQUIRED>
<!ATTLIST employee
  id CDATA #REQUIRED>
]>
<catalog>
  <store id="1">
    <product>Product 1</product>
    <product>Product 2</product>
    <employee id="1">Employee 1</employee>
    <employee id="2">Employee 2</employee>
  </store>
  <store id="2">
    <product>Product 3</product>
    <employee id="3">Employee 3</employee>
  </store>
</catalog>