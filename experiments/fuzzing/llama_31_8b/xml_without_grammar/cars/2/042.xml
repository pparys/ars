<!DOCTYPE catalog [
  <!ELEMENT catalog (book+, author+)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    title CDATA #REQUIRED>
  <!ATTLIST author
    id CDATA #REQUIRED
    name CDATA #REQUIRED>
]>
<catalog>
