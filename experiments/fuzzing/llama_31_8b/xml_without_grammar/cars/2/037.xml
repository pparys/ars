<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (author+, book+)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    title CDATA #IMPLIED
    year CDATA #REQUIRED>
]>
<books>
  <author>John Smith</author>
  <author>Jane Doe</author>
  <book id="book1" title="XML for Dummies" year="2020">
    A comprehensive guide to XML.
  </book>
  <book id="book2" year="2019">
    A byte of juicy information about bytes, bits, and everything inbetween.
  </book>
</books>