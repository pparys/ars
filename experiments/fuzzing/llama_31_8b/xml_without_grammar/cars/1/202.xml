<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book*)>
  <!ELEMENT book (author, title, publication-date)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT publication-date (#CDATA)>
  <!ATTLIST book
    id ID #REQUIRED
    genre CDATA #IMPLIED>
]>
<library>
  <book id="bk123" genre="Fiction">
    <author>John Doe</author>
    <title>The Mystery</title>
    <publication-date>2010-01-01</publication-date>
  </book>
  <book id="bk456" genre="Non-Fiction">
    <author>Jane Doe</author>
    <title>The History</title>
    <publication-date>2009-01-01</publication-date>
  </book>
</library>