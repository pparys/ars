<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE inventory [
  <!ELEMENT inventory (product)*>
  <!ELEMENT product (description,price,stock)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT stock (#PCDATA)>
  <!ATTLIST product
    id CDATA #REQUIRED
    category CDATA #IMPLIED>
]>
<inventory>
  <product id="prod1" category="electronics">
    <description>A high-performance laptop computer.</description>
    <price>1599.99</price>
    <stock>50</stock>
  </product>
  <product id="prod2" category="clothing">
    <description>A stylish pair of jeans.</description>
    <price>69.99</price>
    <stock>100</stock>
  </product>
</inventory>