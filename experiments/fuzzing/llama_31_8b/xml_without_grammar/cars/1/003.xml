<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE book [
  <!ELEMENT book (title, author, publication-date, chapters)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (name, email)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT email (#PCDATA)>
  <!ELEMENT publication-date (#PCDATA)>
  <!ELEMENT chapters (chapter)>
  <!ELEMENT chapter (#PCDATA)>
  <!ATTLIST chapter
    id CDATA #REQUIRED
    title CDATA #IMPLIED>
]>
<book>
  <title>Beginner's Guide to XML</title>
  <author>
    <name>John Doe</name>
    <email>johndoe@example.com</email>
  </author>
  <publication-date>2022-01-01</publication-date>
  <chapters>
    <chapter id="c1" title="Introduction">This is the introduction chapter.</chapter>
    <chapter id="c2">This is the second chapter.</chapter>
  </chapters>
</book>