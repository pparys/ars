<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*)>
  <!ELEMENT product (description, price, category)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT category (#PCDATA)>
  <!ATTLIST product
    id ID #REQUIRED
    inStock (yes|no) "yes">

]>
<catalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="inventory.xsd"
>
  <product id="P001" inStock="yes">
    <description>This is a high-end smartphone.</description>
    <price>999</price>
    <category>Electronics</category>
  </product>
  <product id="P002" inStock="no">
    <description>This is a portable laptop.</description>
    <price>1999</price>
    <category>Computers</category>
  </product>
</catalog>