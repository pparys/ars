<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (author*, publisher*, book+)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT publisher (#PCDATA)>
  <!ELEMENT book (#PCDATA, price?, publicationDate?)>
  <!ATTLIST book
    isbn CDATA #REQUIRED
    edition CDATA #IMPLIED>
  <!ATTLIST author
    id CDATA #REQUIRED
  >
]>
<library>
  <author id="A1">John Doe</author>
  <publisher>Ebury Publishing</publisher>
  <book isbn="978-0241544662" edition="1">Python Programming</book>
  <book isbn="978-0241341968" edition="2">Data Structures</book>
  <book isbn="978-0007277316">Algorithms</book>
</library>