<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book*,author*)>
  <!ELEMENT book (title,author,year)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    category CDATA #IMPLIED>
  <!ATTLIST author
    name CDATA #REQUIRED>
]>
<library>
  <book id="bk101" category="fiction">
    <title>Book One</title>
    <author>
      <name>Jane Asher</name>
    </author>
    <year>2000</year>
  </book>
  <author name="John MacDonald">
    <book id="bk101" category="fiction">
      <title>Book One</title>
      <year>2000</year>
    </book>
  </author>
</library>