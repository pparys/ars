<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (author+, book+)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT book (title, publication, reviewer+)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT publication (#PCDATA)>
  <!ELEMENT reviewer (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    year CDATA #IMPLIED>
]>
<books>
