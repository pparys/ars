  <book id="B001">
    <title>The Great Gatsby</title>
    <publication>1919</publication>
    <reviewer>Book Reviewer 1</reviewer>
    <reviewer>Book Reviewer 2</reviewer>
  </book>
  <book id="B002">
    <title>To Kill a Mockingbird</title>
    <publication>1960</publication>
    <reviewer>Book Reviewer 3</reviewer>
  </book>
</books>