<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book*)>
  <!ELEMENT book (author, title, release-date)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT release-date (#PCDATA)>

  <!ATTLIST book
    id CDATA #REQUIRED
    category CDATA #IMPLIED>
]>
<library>
