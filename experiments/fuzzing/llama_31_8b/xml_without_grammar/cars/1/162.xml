<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*)>
  <!ELEMENT product (description+, price+, bundle?)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT bundle EMPTY>
  <!ATTLIST bundle
    currency CDATA #REQUIRED
    url CDATA #IMPLIED>
  <!ATTLIST product
    id CDATA #REQUIRED
    brand CDATA #IMPLIED>
]>
<catalog>
  <product id="P1" brand="BrandA">
    <description>Product 1 Description</description>
    <description>Product 1 is a great product</description>
    <price>19.99</price>
    <bundle currency="USD" url="https://example.com/product1_bundle"/>
  </product>
  <product id="P2">
    <description>Product 2 Description</description>
    <price>29.99</price>
  </product>
  <product id="P3" brand="BrandB">
    <description>Product 3 Description</description>
  </product>
</catalog>