<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (book+, author+)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    title CDATA #REQUIRED
    price CDATA #IMPLIED>
  <!ATTLIST author
    name CDATA #REQUIRED
    email CDATA #IMPLIED>
]>
<catalog>
  <book title="Harry Potter" price="19.99">
    <author name="J.K. Rowling" email="jkrowling@example.com"/>
  </book>
  <book title="The Lord of the Rings" price="39.99">
    <author name="J.R.R. Tolkien" email="jrrtolkien@example.com"/>
  </book>
  <author name="Charles Dickens" email="charlesdickens@example.com"/>
</catalog>