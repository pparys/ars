<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (book+, author?)>
  <!ELEMENT book (title, year, genre)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT year (#PCDATA)>
  <!ELEMENT genre (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST author
    id CDATA #REQUIRED
    type (author/editor) #REQUIRED>
]>
<books>
