<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*)>
  <!ELEMENT product (description|image)*>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT image (#PCDATA)>
  <!ATTLIST product
    id ID #REQUIRED
    price CDATA #IMPLIED>
  <!ATTLIST image
    url CDATA #REQUIRED
    type CDATA #IMPLIED>
  <!ATTLIST description
    content CDATA #REQUIRED
    author CDATA #IMPLIED>
]>
<catalog>
  <product id="prod1" price="19.99">
    <description content="This is a product description." author="John Doe"/>
    <image url="image1.jpg" type="jpeg"/>
  </product>
  <product id="prod2" price="9.99">
    <image url="image2.png" type="png"/>
    <description content="This is another product description." author="Jane Doe"/>
  </product>
</catalog>