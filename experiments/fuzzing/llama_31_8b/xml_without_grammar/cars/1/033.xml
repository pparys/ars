<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (author, book+)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    year CDATA #IMPLIED>
]>
<library>
  <author>J.K. Rowling</author>
  <book id="1" year="2005">Harry Potter and the Prisoner of Azkaban</book>
  <book id="2" year="2007">Harry Potter and the Deathly Hallows</book>
</library>