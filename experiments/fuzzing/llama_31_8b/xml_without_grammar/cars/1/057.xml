<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (author+, book*)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT book (title, publication-date, isbn)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT publication-date (#PCDATA)>
  <!ELEMENT isbn (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    genre (Fiction|Non-fiction) #REQUIRED
  >
]>
<library>
  <author>John Doe</author>
  <author>Jane Smith</author>
  <book id="bk1" genre="Fiction">
    <title>The Great Gatsby</title>
    <publication-date>1925</publication-date>
    <isbn>1234567890</isbn>
  </book>
  <book id="bk2" genre="Non-fiction">
    <title>The History of XML</title>
    <publication-date>2022</publication-date>
    <isbn>9876543210</isbn>
  </book>
</library>