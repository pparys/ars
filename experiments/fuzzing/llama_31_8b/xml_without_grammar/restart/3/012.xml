<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE client [
  <!ELEMENT client (name,address)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (street,city,state,zip)>
  <!ELEMENT street (#PCDATA)>
  <!ELEMENT city (#PCDATA)>
  <!ELEMENT state (#PCDATA)>
  <!ELEMENT zip (#PCDATA)>
  <!ATTLIST client
    id CDATA #REQUIRED
    email CDATA #IMPLIED>
]>
<client id="C001" email="info@client.com">
  <name>John Doe</name>
  <address>
    <street>123 Main St</street>
    <city>Anytown</city>
    <state>CA</state>
    <zip>12345</zip>
  </address>
</client>