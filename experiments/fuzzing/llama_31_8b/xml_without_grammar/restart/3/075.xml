<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE book [
  <!ELEMENT book (title, author, chapter*)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT chapter (section*estro*)>
  <!ELEMENT section (#PCDATA)>
  <!ELEMENTestro EMPTY>
  <!ATTLIST book
    genre (fiction | non-fiction) "fiction"
    lang CDATA #REQUIRED
  >
  <!ATTLIST chapter
    number CDATA #REQUIRED
    title (#PCDATA)
  >
]>
<book lang="english" genre="fiction">
  <title>The Great Gatsby</title>
  <author>F. Scott Fitzgerald</author>
  <chapter number="1" title="Chapter I">
    <section>Chapter 1, section 1</section>
    <section>Chapter 1, section 2</section>
    <estro>Chapter 1, empty elem</estro>
  </chapter>
  <chapter number="2" title="Chapter II">
    <section>Chapter 2, section 1</section>
  </chapter>
</book>