<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (book+)>
  <!ELEMENT book (#PCDATA|author|year|genre)*>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT year (#PCDATA)>
  <!ELEMENT genre (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    visible (yes|no) "yes"
  >
]>
<books>
  <book id="book1" visible="yes">Learning XML</book>
  <book id="book2" visible="no">Mastering XML</book>
  <book id="book3" visible="yes">
    Mastering HTML and CSS
    <author>Michael Shaffer</author>
    <year>2020</year>
    <genre>Programming</genre>
  </book>
</books>