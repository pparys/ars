<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE employee [
  <!ELEMENT employee (name, position, address)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT position (#PCDATA)>
  <!ELEMENT address (street, city, state, zip)>
  <!ELEMENT street (#PCDATA)>
  <!ELEMENT city (#PCDATA)>
  <!ELEMENT state (#PCDATA)>
  <!ELEMENT zip (#PCDATA)>
  <!ATTLIST employee
    id CDATA #REQUIRED
    type (full-time|part-time) #IMPLIED>
]>
<employee id="123" type="full-time">
  <name>John Doe</name>
  <position>Software Developer</position>
  <address>
    <street>123 Main Street</street>
    <city>New York</city>
    <state>NY</state>
    <zip>10001</zip>
  </address>
</employee>