<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (author+,book+)>
  <!ELEMENT author (name+,book+)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST author
    id CDATA #IMPLIED
    species CDATA #IMPLIED>
  <!ATTLIST book
    id CDATA #IMPLIED
    title CDATA #REQUIRED
    author CDATA #REQUIRED>
]>
<library>
  <author id="a1" species="human">
    <name>John Doe</name>
    <book id="b1" title="XML tutorial" author="a1">
      Book content.
    </book>
    <book id="b2" title="Python programming" author="a1">
      Book content.
    </book>
  </author>
  <author id="a2" species="cat">
    <name>Whiskers</name>
    <book id="b3" title="Feline behavior" author="a2">
      Book content.
    </book>
  </author>
  <book id="b4" title="Dewey Decimal System" author="a1,a2">
    Book content.
  </book>
</library>