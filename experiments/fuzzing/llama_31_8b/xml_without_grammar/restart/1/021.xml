<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE customers [
  <!ELEMENT customers (customer+)>
  <!ELEMENT customer (name, address, phone, orders)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ELEMENT orders (order+)>
  <!ELEMENT order (#PCDATA)>
  <!ATTLIST customer
    id CDATA #REQUIRED>
]>
<customers>
  <customer id="C01">
    <name>John Doe</name>
    <address>123 Main St, Anytown, USA</address>
    <phone>123-456-7890</phone>
    <orders>
      <order>Order 1: This is the first order.</order>
      <order>Order 2: This is the second order.</order>
    </orders>
  </customer>
  <customer id="C02">
    <name>Jane Smith</name>
    <address>456 Elm St, Othertown, USA</address>
    <phone>987-654-3210</phone>
    <orders>
      <order>Order 1: This is the first order.</order>
    </orders>
  </customer>
</customers>