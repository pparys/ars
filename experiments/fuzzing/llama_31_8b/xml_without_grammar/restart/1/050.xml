<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document [
  <!ELEMENT document (title, section*, meta?)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT section (subsection+, textToDisplay)>
  <!ELEMENT subsection (#PCDATA)>
  <!ELEMENT textToDisplay (#PCDATA)>
  <!ELEMENT meta (#PCDATA)>
  <!ATTLIST meta
    name CDATA #REQUIRED
    value CDATA #REQUIRED
  >
]>
<document>
  <title>Documentation Guide</title>
  <section>
    <subsection>Section One</subsection>
    <textToDisplay>This is a subsection within a section.</textToDisplay>
  </section>
  <section>
    <subsection>Section Two</subsection>
    <textToDisplay>This is another subsection within a section.</textToDisplay>
  </section>
  <meta name="Author" value="John Doe"/>
  <meta name="Date" value="2025-09-03"/>
</document>