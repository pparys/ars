<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (author,product*)>
  <!ELEMENT author (address,phone)>
  <!ELEMENT address (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ELEMENT product (price,description)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ATTLIST product
    id      CDATA  #REQUIRED
    name    CDATA  #REQUIRED
    stock   CDATA  #REQUIRED>
]>
<catalog>
  <author>
    <address>123 Main St</address>
    <phone>555-1234</phone>
  </author>
  <product id="P001" name="Product 1" stock="100">
    <price>$19.99</price>
    <description>This is a great product.</description>
  </product>
  <product id="P002" name="Product 2" stock="50">
    <price>$29.99</price>
    <description>This is another great product.</description>
  </product>
</catalog>