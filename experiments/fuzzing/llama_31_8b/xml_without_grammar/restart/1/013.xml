<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (category*)>
  <!ELEMENT category (product*)>
  <!ELEMENT product (#PCDATA)>
  <!ATTLIST category 
    id ID #REQUIRED
    name CDATA #REQUIRED>
  <!ATTLIST product 
    id ID #REQUIRED
    price CDATA #REQUIRED>
]>
<catalog>
  <category id="cat1" name="Electronics">
    <product id="prod1" price="999.99">MacBook Pro</product>
  </category>
  <category id="cat2" name="Toys">
    <product id="prod2" price="20.99">Teddy Bear</product>
  </category>
</catalog>