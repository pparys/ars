<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*)>
  <!ELEMENT product (description, price, supplier)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT supplier (#PCDATA)>
  <!ATTLIST product
    id CDATA #REQUIRED
  >
]>
<catalog>
  <product id="P1">
    <description>This is a product description.</description>
    <price>$19.99</price>
    <supplier> Our Supplier</supplier>
  </product>
  <product id="P2">
    <description>This is another product description.</description>
    <price>$9.99</price>
    <supplier>Another Supplier</supplier>
  </product>
</catalog>