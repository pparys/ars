<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (book+)>
  <!ELEMENT book (title|author|year)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT year (#PCDATA)>
  <!ATTLIST book
    id  CDATA   #REQUIRED
    pub-date CDATA #IMPLIED>
]>
<books>
  <book id="book1" pub-date="2024-07-15">
    <title>Book Title 1</title>
  </book>
  <book id="book2" pub-date="2023-06-20">
    <author>John Doe</author>
  </book>
  <book id="book3" pub-date="2022-05-25">
    <year>2022</year>
  </book>
</books>