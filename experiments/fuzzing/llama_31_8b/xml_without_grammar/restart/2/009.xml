<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE inventory [
  <!ELEMENT inventory (product+)>
  <!ELEMENT product (description, price, quantity)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT quantity (#PCDATA)>
  <!ATTLIST product
    id CDATA #REQUIRED
    category CDATA #IMPLIED>
]>
<inventory>
  <product id="P1" category="Electronics">
    <description>32-inch 4K LED TV</description>
    <price>$599.99</price>
    <quantity>100</quantity>
  </product>
  <product id="P2" category="Home Appliances">
    <description>Samsung Washing Machine</description>
    <price>$899.99</price>
    <quantity>50</quantity>
  </product>
</inventory>