<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE company [
  <!ELEMENT company (address, departments)>
  <!ELEMENT address (street, city, state, zip)>
  <!ELEMENT departments (department+)>
  <!ELEMENT department (title, employees)>
  <!ELEMENT title #PCDATA>
  <!ELEMENT employees (employee+)>
  <!ELEMENT employee (#PCDATA)>
  <!ATTLIST employee
    id ID #REQUIRED
  >
]>
<company>
  <address>
    <street>123 Main St</street>
    <city>New York</city>
    <state>NY</state>
    <zip>10001</zip>
  </address>
  <departments>
    <department>
      <title>IT</title>
      <employees>
        <employee id="emp1">John Doe</employee>
        <employee id="emp2">Jane Doe</employee>
      </employees>
    </department>
    <department>
      <title>HR</title>
      <employees>
        <employee id="emp3">Alice Smith</employee>
        <employee id="emp4">Bob Johnson</employee>
      </employees>
    </department>
  </departments>
</company>