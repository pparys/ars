<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book | author)*>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST author
    name CDATA #REQUIRED
    birth CDATA #IMPLIED
    death CDATA #IMPLIED>
]>
<library>
  <book>Harry Potter</book>
  <book>The Lord of the Rings</book>
  <author name="J.K. Rowling" birth="1965" death=""/>
  <author name="Tolkien" birth="1892" death="1973"/>
</library>