<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book+, image*, link*)>
  <!ELEMENT book (title, author+, publisher, year)>
  <!ELEMENT author (name, birthday)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT birthday (#PCDATA)>
  <!ELEMENT publisher (#PCDATA)>
  <!ELEMENT year (#PCDATA)>
  <!ELEMENT image (#PCDATA)>
  <!ELEMENT link (#PCDATA)>
  <!ATTLIST library
    id CDATA #IMPLIED
    lang (en|fr|de) "en"
  >
]>
<library id="lib1" lang="en">
  <book>
    <title>The Lord of the Rings</title>
    <author>
      <name>J.R.R. Tolkien</name>
      <birthday>January 3, 1892</birthday>
    </author>
    <publisher>Penguin Books</publisher>
    <year>1954</year>
  </book>
  <image>image1.jpg</image>
  <link>https://www.amazon.com</link>
</library>