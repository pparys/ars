<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product+, address)>
  <!ELEMENT product (description, price)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ATTLIST product
    id CDATA #REQUIRED
    name CDATA #REQUIRED>
]>
<catalog>
  <product id="1" name="Product A">
    <description>This is product A.</description>
    <price>$19.99</price>
  </product>
  <product id="2" name="Product B">
    <description>This is product B.</description>
    <price>$9.99</price>
  </product>
  <address>123 Main St, New York, NY 10001</address>
</catalog>