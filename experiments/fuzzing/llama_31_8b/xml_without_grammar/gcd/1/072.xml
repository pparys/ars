<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE employees [
  <!ELEMENT employees (employee*)>
  <!ATTLIST employees
    name CDATA #REQUIRED
    date CDATA #IMPLIED>
  <!ATTLIST employee
    id CDATA #REQUIRED
    department CDATA #IMPLIED>
  <!ATTLIST address
    street CDATA #REQUIRED
    city CDATA #IMPLIED
    country CDATA #REQUIRED>
]>
<employees name="ABC Corporation" date="2024-01-01">
  <employee id="E1" department="HR">
    <address street="123 Main St" city="Chicago" country="USA"/>
