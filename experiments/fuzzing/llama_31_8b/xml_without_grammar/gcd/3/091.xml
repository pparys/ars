<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book+, author*)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    title CDATA #REQUIRED
    year CDATA #REQUIRED
    author CDATA #IMPLIED>
]>
<library>
  <book title="Book 1" year="2000">This is the first book.</book>
  <book title="Book 2" author="John Doe">This is the second book.</book>
  <book year="2001">This is the third book.</book>
  <author>John Smith</author>
</library>