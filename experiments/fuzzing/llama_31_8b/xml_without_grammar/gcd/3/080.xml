<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE book [
  <!ELEMENT book (title, author, chapter+)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT chapter (#PCDATA)>
  <!ELEMENT booklist EMPTY>
  <!ATTLIST booklist
    id CDATA #IMPLIED
  >
  <!ATTLIST chapter
    id CDATA #REQUIRED
    title CDATA #REQUIRED
  >
]>
<book id="bk1"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="book.xsd">
  <title>My first Book</title>
  <author>Author Name</author>
  <booklist id="lb1"></booklist>
  <chapter id="c1" title="Chapter 1">This is to demonstrate complex book structure</chapter>
  <chapter id="c2" title="Chapter 2">This chapter is to test and check the usage of chapter</chapter>
  <chapter id="c3" title="Chapter 3">This chapter is for long stretches of information that needs to be shown.</chapter>
</book>