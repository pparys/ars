<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE projects [
  <!ELEMENT projects (project*)>
  <!ELEMENT project (name,description,employees+)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT employees (employee*)>
  <!ELEMENT employee (name,salary,specialization)>
  <!ATTLIST employee
    id CDATA #REQUIRED
  >
  <!ATTLIST project
    id CDATA #REQUIRED
  >
]>
<projects>
  <project id="1">
    <name>Project Alpha</name>
    <description>A high-tech project focused on innovation.</description>
    <employees>
      <employee id="1">
        <name>Jane Doe</name>
        <salary>50000</salary>
        <specialization>Software Engineer</specialization>
      </employee>
      <employee id="2">
        <name>John Smith</name>
        <salary>60000</salary>
        <specialization>Data Scientist</specialization>
      </employee>
    </employees>
  </project>
  <project id="2">
    <name>Project Beta</name>
    <description>A marketing project focused on growth.</description>
    <employees>
      <employee id="3">
        <name>Lisa Brown</name>
        <salary>40000</salary>
        <specialization>Marketing Manager</specialization>
      </employee>
    </employees>
  </project>
</projects>