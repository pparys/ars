<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (author+, book*)>
  <!ELEMENT author (name, biography?)>
  <!ELEMENT book (title, publicationDate?, price?)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT biography (#PCDATA)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT publicationDate (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ATTLIST book
    isbn CDATA #REQUIRED>
  <!ATTLIST author
    id ID #REQUIRED>
]>
<books>
  <author id="AUTH-01">
    <name>John Doe</name>
    <biography>Author of many famous books.</biography>
  </author>
  <author id="AUTH-02">
    <name>Jane Doe</name>
    <biography>Co-author of many famous books.</biography>
  </author>
  <book isbn="978-1-234-56789-0">
    <title>Doe's Wonderful Story</title>
    <publicationDate>2020-01-01</publicationDate>
    <price>19.99</price>
  </book>
  <book isbn="978-1-234-56790-7">
    <title>Another Doe's Story</title>
    <price>24.99</price>
  </book>
</books>