<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (author+, book+)>
  <!ELEMENT author (name, bio)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT bio (#PCDATA)>
  <!ELEMENT book (title, publication-date)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT publication-date (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    genre CDATA #IMPLIED>
]>
<library>
  <author>
    <name>Jane Doe</name>
    <bio>Biography of Jane Doe.</bio>
  </author>
  <author>
    <name>John Smith</name>
    <bio>Biography of John Smith.</bio>
  </author>
  <book id="ABC123" genre="Fiction">
    <title>The Great Gatsby</title>
    <publication-date>1925-04-10</publication-date>
  </book>
  <book id="XYZ456" genre="Non-Fiction">
    <title>Hubert's Lost Mine</title>
    <publication-date>1927-02-25</publication-date>
  </book>
</library>