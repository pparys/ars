<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE bookstore [
  <!ELEMENT bookstore (booklist, authorlist)>
  <!ELEMENT booklist (book+)>
  <!ELEMENT authorlist (author+)>
  <!ELEMENT book (title, price, authorref)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT authorref (#PCDATA)>
  <!ELEMENT author (#PCDATA)>

  <!ATTLIST book
    id CDATA #REQUIRED
  >

  <!ATTLIST author
    id CDATA #REQUIRED
  >
]>
<bookstore>
  <booklist>
    <book id="bk101" title="Book Title" price="19.99">
      <authorref>Author Name</authorref>
    </book>
    <book id="bk102" title="Book Title 2" price="5.00">
      <authorref>Author Name 2</authorref>
    </book>
  </booklist>
  <authorlist>
    <author id="au101">Author Name</author>
    <author id="au102">Author Name 2</author>
  </authorlist>
</bookstore>