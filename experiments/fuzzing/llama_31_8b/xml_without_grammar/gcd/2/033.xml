<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (book*, author?)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    title CDATA #IMPLIED
    price CDATA #IMPLIED>
  <!ATTLIST author
    first-name CDATA #IMPLIED
    last-name CDATA #IMPLIED>
]>
<catalog
  xmlns:xi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="catalog.xsd">
  <book title="Harry Potter and the Philosopher's Stone" price="9.99">
    By J.K. Rowling.
  </book>
  <book title="The Great Gatsby" price="8.99">
    By F. Scott Fitzgerald.
  </book>
  <author first-name="J.K." last-name="Rowling"/>
</catalog>