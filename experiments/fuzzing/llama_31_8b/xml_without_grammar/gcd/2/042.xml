<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE bookstore [
  <!ELEMENT bookstore (book+)>
  <!ELEMENT book (title, author, price, review)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT review (#PCDATA)>
  <!ATTLIST book
    ISBN CDATA #REQUIRED
    genre (fiction|non-fiction) #REQUIRED>
]>
<bookstore>
  <book ISBN="1-1234567890" genre="fiction">
    <title>The Great Gatsby</title>
    <author>F. Scott Fitzgerald</author>
    <price>$15.00</price>
    <review>A classic American novel.</review>
  </book>
  <book ISBN="1-0987654321" genre="non-fiction">
    <title>A History of the World</title>
    <author>Jean-Paul Sartre</author>
    <price>$20.00</price>
    <review>A comprehensive history of the world.</review>
  </book>
</bookstore>