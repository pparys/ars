<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (item*)>
  <!ELEMENT item (name, description, price)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ATTLIST item
    id ID #REQUIRED
    type CDATA #IMPLIED>
]>
<catalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="catalog.xsd">
  <item id="1" type="electronic">
    <name>Apple iPhone 14</name>
    <description>A smartphone with 6 GB RAM and 512 GB storage</description>
    <price>999.99</price>
  </item>
  <item id="2" type="fashion">
    <name>Adidas Shoes</name>
    <description>Black and white color combination shoes</description>
    <price>129.99</price>
  </item>
</catalog>