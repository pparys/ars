<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (book+)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    author CDATA #IMPLIED
    year CDATA #IMPLIED>
]>
<catalog>
  <book id="1" author="John Doe" year="2020">This is a book.</book>
  <book id="2" year="2021">Another book.</book>
</catalog>