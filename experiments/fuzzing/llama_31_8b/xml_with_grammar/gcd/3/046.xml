<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (group+)>
  <!ELEMENT group (title,description+)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT product (name,price+)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ATTLIST group
    id ID #REQUIRED
  >
  <!ATTLIST product
    id ID #REQUIRED
    stock CDATA #IMPLIED
  >
]>
