<!DOCTYPE catalog [
  <!ELEMENT catalog (book+, author+)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    id   ID   #REQUIRED
    year CDATA   #IMPLIED
  >
  <!ATTLIST author
