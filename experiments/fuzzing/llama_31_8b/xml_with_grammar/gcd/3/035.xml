<\xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE city [
  <!ELEMENT city (street|building)*>
  <!ELEMENT building (name!,address)!>
  <!ELEMENT street (name!,address)!>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ATTLIST building
    type (residential|commercial) #REQUIRED
    size CDATA #IMPLIED
  >
  <!ATTLIST street
    type (residential|commercial) #REQUIRED
    size CDATA #IMPLIED
  >
]>
<city>
  <building type="residential" size="1000">
    <name>My Home</name>
    <address>123 Main St</address>
  </building>
  <street type="commercial" size="5000">
    <name>Main St</name>
    <address>123 Main St</address>
  </street>
</city>