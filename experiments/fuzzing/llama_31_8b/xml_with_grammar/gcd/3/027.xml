<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE person [
  <!ELEMENT person (name,address)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (street,city,state,country)>
 <!ELEMENT street (#PCDATA)>
  <!ELEMENT city (#PCDATA)>
  <!ELEMENT state (#PCDATA)>
  <!ELEMENT country (#PCDATA)>
  <!ATTLIST person 
    idCDATA #REQUIRED
    nameCDATA #IMPLIED>
  <!ATTLIST address
    zipCDATA #IMPLIED>
]>
<person id="1">
   <name>John Dow</name>
   <address zip="12345">
       <street>Main St</street>
       <city>New York</city>
       <state>NY</state>
       <country>USA</country>
   </address>
</person>