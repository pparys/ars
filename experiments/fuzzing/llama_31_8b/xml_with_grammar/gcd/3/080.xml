<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE root [
  <!ELEMENT root (employee+)>
  <!ELEMENT employee (id, name, address)>
  <!ELEMENT id (#PCDATA)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (street, city, state, zip)>
  <!ELEMENT street (#PCDATA)>
  <!ELEMENT city (#PCDATA)>
  <!ELEMENT state (#PCDATA)>
  <!ELEMENT zip (#PCDATA)>
  <!ATTLIST root
    company CDATA #REQUIRED>
  <!ATTLIST employee
    id CDATA #REQUIRED
    hiredate CDATA #REQUIRED>
]>
<root company="ABC Corporation">
  <employee id="1" hiredate="2022-01-01">
    <name>Alice</name>
    <id>1234</id>
    <address>
      <street>123, Main Street</street>
      <city>New York</city>
      <state>NY</state>
      <zip>10001</zip>
    </address>
  </employee>
  <employee id="2" hiredate="2023-01-01">
    <name>Bob</name>
    <id>5678</id>
    <address>
      <street>456, Park Avenue</street>
      <city>New York</city>
      <state>NY</state>
      <zip>10002</zip>
    </address>
  </employee>
</root>