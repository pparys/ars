<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE data [
  <!ELEMENT data (name, address, phone)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ATTLIST data
    id CDATA #REQUIRED
    version CDATA #IMPLIED>
  <!ATTLIST name
    type CDATA #IMPLIED
    locale CDATA #REQUIRED>
]>
<data id="12345" version="1.0">
  <name type="human" locale="en_US">John Doe</name>
  <address>123 Main St, Anytown, USA</address>
  <phone>+1 (123) 456-7890</phone>
</data>