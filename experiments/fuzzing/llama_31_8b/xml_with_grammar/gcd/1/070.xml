<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*)>
  <!ELEMENT product (name,price,description)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ATTLIST product
    id CDATA #REQUIRED
    stock CDATA #REQUIRED
  >
]>
<catalog>
  <product id="1" stock="10">
    <name>Product Name 1</name>
    <price>19.99</price>
    <description>Product description 1.</description>
  </product>
  <product id="2" stock="20">
    <name>Product Name 2</name>
    <price>9.99</price>
    <description>Product description 2.</description>
  </product>
</catalog>