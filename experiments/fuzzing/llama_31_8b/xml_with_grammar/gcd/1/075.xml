<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (book+)>
  <!ELEMENT book (#PCDATA|price|author|title)*>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT title (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    authorID CDATA #IMPLIED>
]>
<books>
  <book id="book1" authorID="A1">A small book on a big topic.</book>
  <book id="book2">A long book on a complex subject.
    <price>24.99</price>
    <author>John Smith</author>
    <title>The Big Book</title>
  </book>
</books>