<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE root [
  <!ELEMENT root (#PCDATA)>
  <!ELEMENT person (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ATTLIST root
    id CDATA #REQUIRED
    name CDATA #IMPLIED>
  <!ATTLIST person
    id CDATA #REQUIRED
    age CDATA #IMPLIED>
  <!ATTLIST address
    street CDATA #IMPLIED
    city CDATA #IMPLIED
    state CDATA #IMPLIED
    zip CDATA #IMPLIED>
  <!ATTLIST phone
    type CDATA #IMPLIED
    number CDATA #REQUIRED>
]>
<root id="root1">
  <person id="person1">John Doe</person>
  <address street="123 Main St">New York</address>
  <phone type="home" number="123-456-7890"/>
</root>