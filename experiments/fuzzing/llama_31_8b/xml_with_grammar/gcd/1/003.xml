<\xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE employee [
  <!ELEMENT employee (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ELEMENT skills (#PCDATA)>
  <!ATTLIST employee
    id CDATA #IMPLIED>
  <!ATTLIST phone
    type (home|work) #IMPLIED
    number CDATA #REQUIRED>
  <!ATTLIST address
    street CDATA #REQUIRED>
  <!ATTLIST skills
    language (English|Spanish) #IMPLIED
    framework (JSP|Struts) #IMPLIED>
]>
<employee id="123" >
  <phone type="home" number="555-1234"/>
  <phone type="work" number="555-5678"/>
  <address street="123 Main St"/>
  <skills language="English" framework="Struts"/>
  Hello, this is a complex employee element with multiple children
</employee>