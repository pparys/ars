<\xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (movie|book)*>
  <!ELEMENT movie (title, director, producer)>
  <!ELEMENT book (title, author)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT director (#PCDATA)>
  <!ELEMENT producer (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST library
    year CDATA #REQUIRED
    language CDATA #IMPLIED>
  <!ATTLIST book
    genre CDATA #REQUIRED>
  <!ATTLIST movie
    rating CDATA #IMPLIED>
]>
<library year="2022" language="English">
  <book title="Pride and Prejudice" genre="Romance">
    <author>Jane Austen</author>
  </book>
  <movie title="The Shawshank Redemption" director="Frank Darabont" producer="Niki Marvin">
    <director>Frank Darabont</director>
    <producer>Niki Marvin</producer>
  </movie>
</library>