<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE person [
  <!ELEMENT person (name, address) +>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (street, city, country)>
  <!ELEMENT street (#PCDATA)>
  <!ELEMENT city (#PCDATA)>
  <!ELEMENT country (#PCDATA)>
  <!ATTLIST person
    id ID #REQUIRED
    age CDATA #IMPLIED>
  <!ATTLIST name
    gender (male|female)>
]>
<person id="1" age="30">
  <name gender="male">John Doe</name>
  <address>
    <street>123 Main St</street>
    <city>New York</city>
    <country>USA</country>
  </address>
</person>