<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (author+, book+)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT book (title, publication-date*)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT publication-date (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
  >
  <!ATTLIST author
    id CDATA #REQUIRED
    bk-reference CDATA #IMPLIED
  >
]>
<library>
  <author id="author-001" bk-reference="bk-001">John Doe</author>
  <author id="author-002">Jane Doe</author>
  <book id="book-001">
    <title>Effective Java</title>
    <publication-date>2022-01-01</publication-date>
  </book>
  <book id="book-002">
    <title>Java Core</title>
  </book>
</library>