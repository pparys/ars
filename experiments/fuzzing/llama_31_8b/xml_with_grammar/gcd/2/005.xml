<\xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config [
  <!ELEMENT config (server|client)>
  <!ELEMENT server (user+|db)>
  <!ATTLIST server
    id CDATA #REQUIRED
  >
  <!ATTLIST db
    name CDATA #REQUIRED
    port CDATA #IMPLIED
  >
  <!ATTLIST client
    ip CDATA #REQUIRED
    port CDATA #IMPLIED
  >
]>
<config>
  <server id='A'>
    <user>admin</user>
    <db name='mydb' port='8080'/>
  </server>
  <client ip="192.168.1.100" port="80"/>
</config>