<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*, category*)>
  <!ELEMENT product (description, price, brand)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT brand (#PCDATA)>
  <!ELEMENT category (#PCDATA)>
  <!ATTLIST product
    id CDATA #REQUIRED
    name CDATA #REQUIRED>
  <!ATTLIST category
    id CDATA #REQUIRED
    name CDATA #REQUIRED>
]>
