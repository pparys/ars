<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (category*)>
  <!ELEMENT category (product*)>
  <!ELEMENT product (#PCDATA)>
  <!ATTLIST category
    name CDATA #REQUIRED>
  <!ATTLIST product
    id CDATA #REQUIRED
    price CDATA #REQUIRED
    description CDATA #IMPLIED>
]>
<catalog>
  <category name="electronics">
    <product id="abc123" price="100.00">Smartwatch</product>
  </category>
  <category name="books">
    <product id="def456" price="50.00">Programming book</product>
  </category>
</catalog>