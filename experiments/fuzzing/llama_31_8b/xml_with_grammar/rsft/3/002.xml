<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product+)>
  <!ELEMENT product (#PCDATA)>
  <!ELEMENT country (name,description)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ATTLIST product
    id ID #REQUIRED
    price CDATA #IMPLIED>
  <!ATTLIST country
    code CDATA #REQUIRED
    capital CDATA #IMPLIED>
]>
<catalog>
<product id="prod-123" price="19.99">
  <country code="US" capital="Washington D.C.">
    <name>USA</name>
    <description>The United States of America.</description>
  </country>
  <country code="CA" capital="Ottawa">
    <name>Canada</name>
    <description>Home of the Maple Leafs.</description>
  </country>
</product>
</catalog>