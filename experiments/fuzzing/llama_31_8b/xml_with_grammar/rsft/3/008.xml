<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book+, author+)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    id ID #REQUIRED
    genre CDATA #IMPLIED>
  <!ATTLIST author
    id ID #REQUIRED
    name CDATA #REQUIRED
    birthdate CDATA #IMPLIED>
]>
<library>
  <book id="bk101" genre="thriller">Novel 1</book>
  <book id="bk102">Novel 2</book>
  <book id="bk103">Novel 3</book>
  <author id="a101" name="John Doe" birthdate="1990-06-03">Author 1</author>
  <author id="a102" name="Jane Doe">Author 2</author>
  <author id="a103">Author 3</author>
</library>