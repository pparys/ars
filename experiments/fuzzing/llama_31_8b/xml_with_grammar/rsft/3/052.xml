<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE person [
  <!ELEMENT person (name, address, phone)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (street, city, state, zip)>
  <!ELEMENT street (#PCDATA)>
  <!ELEMENT city (#PCDATA)>
  <!ELEMENT state (#PCDATA)>
  <!ELEMENT zip (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ATTLIST person
    id CDATA #REQUIRED
    age CDATA #IMPLIED>
  <!ATTLIST address
    type CDATA #IMPLIED>
]>
<person id="_123" age="30">
  <name>John Smith</name>
  <address type="home">
    <street>123 Main St</street>
    <city>Anytown</city>
    <state>US</state>
    <zip>12345</zip>
  </address>
  <phone>555-1234</phone>
</person>