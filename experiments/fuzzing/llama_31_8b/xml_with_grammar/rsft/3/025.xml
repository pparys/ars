<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (department+, product+)>
  <!ELEMENT department (name, description)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT product (name, price)>
  <!ELEMENT name (@PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ATTLIST department
    id CDATA # REQUIREd>
  <!ATTLIST product
    stock CDATA #REQUIRED
    quantity CDATA #IMPLIED>
]>
<catalog>
  <department id="electronics">
    <name>Electronics</name>
    <description>Catalog of home electronics items.</description>
  </department>
  <department id="video_games">
    <name>Video Games</name>
    <description>Catalog of video games.</description>
  </department>
  <product stock="available">
    <name>TV</name>
    <price>$1,000</price>
  </product>
  <product stock="unavailable">
    <name>Game Console</name>
    <price>$500</price>
  </product>
  <product>
    <name>Tablet</name>
    <price>$300</price>
  </product>
</catalog>