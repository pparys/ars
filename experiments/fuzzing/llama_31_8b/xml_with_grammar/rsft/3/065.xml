<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE products [
  <!ELEMENT products (product*)>
  <!ELEMENT product (#PCDATA | price | description)*>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ATTLIST products 
    id CDATA #REQUIRED
  >
  <!ATTLIST product 
    name CDATA #REQUIRED
  >
]>
<products id="prod001">
  <product name="Product 1">
    This is a description for Product 1.
    <price>$9.99</price>
  </product>
  <product name="Product 2">
    This is a description for Product 2.
    <price>$19.99</price>
    <description>This is an extended description for Product 2.</description>
  </product>
</products>