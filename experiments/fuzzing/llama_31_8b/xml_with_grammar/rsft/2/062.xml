<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE person [
  <!ELEMENT person (name, address, phone)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (street, city)>
  <!ELEMENT street (#PCDATA)>
  <!ELEMENT city (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ATTLIST person
    id CDATA #REQUIRED
  >
]>
<person id="P123">
  <name>John Doe</name>
  <address>
    <street>123 Main St</street>
    <city>New York</city>
  </address>
  <phone>123-456-7890</phone>
</person>