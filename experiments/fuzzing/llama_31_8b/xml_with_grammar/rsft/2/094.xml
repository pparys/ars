<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE model [
  <!ELEMENT model (person+)>
  <!ELEMENT person (name|address?)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (street, city, state, zip)>
  <!ATTLIST address
    type (home|work) "home"
    country CDATA #REQUIRED
  >
]>
<model>
  <person>
    <name>John Doe</name>
    <address type="home" country="USA">
      <street>123 Main St</street>
      <city>New York</city>
      <state>NY</state>
      <zip>10001</zip>
    </address>
  </person>
  <person>
    <name>Jane Doe</name>
  </person>
</model>