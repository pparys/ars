<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE persons [
  <!ELEMENT persons (person+)>
  <!ELEMENT person (name, email+)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT email (#PCDATA)>
  <!ATTLIST person
    id CDATA #REQUIRED
  >
]>
<persons>
  <person id="1">
    <name>John Doe</name>
    <email>johndoe@example.com</email>
  </person>
  <person id="2">
    <name>Jane Doe</name>
    <email>janedoe@example.com</email>
  </person>
</persons>