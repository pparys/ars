<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE bookstore [
  <!ELEMENT bookstore (book+)>
  <!ELEMENT book (title, author, price, review)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT review (#PCDATA)>
  <!ATTLIST book
    id CDATA #IMPLIED
    genre (fiction|non-fiction) #REQUIRED>
]>
<bookstore>
  <book id="b1" genre="fiction">
    <title>A Dream of Spring</title>
    <author>J. R. R. Tolkien</author>
    <price>$39.99</price>
    <review>A great fantasy novel.</review>
  </book>
  <book id="b2" genre="non-fiction">
    <title>The History of the World</title>
    <author>Barbara W. Tuchman</author>
    <price>$29.99</price>
    <review>A comprehensive history of the world.</review>
  </book>
</bookstore>