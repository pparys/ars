<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product+)>
  <!ELEMENT product (
    name, description, price,
    reviewer (review+) |
    (review+) 
    )>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT reviewer (#PCDATA)>
  <!ELEMENT review (#PCDATA)>
  <!ATTLIST product
    type CDATA #REQUIRED
    condition CDATA #REQUIRED>
]>
<catalog>
  <product type="Book" condition="New">
    <name>The Great Gatsby</name>
    <description>A novel by F. Scott Fitzgerald.</description>
    <price>19.99</price>
  </product>
  <product type="Game" condition="Used">
    <name>Super Mario Bros</name>
    <description>A classic platformer.</description>
    <price>9.99</price>
    <reviewer>Review by John</reviewer>
    <review>This is an excellent game!</review>
  </product>
  <product type="Movie" condition="New">
    <name>The Shawshank Redemption</name>
    <description>A highly rated movie.</description>
    <price>14.99</price>
    <reviewer>Review by Jane</reviewer>
    <review>This is a great movie!</review>
  </product>
</catalog>