<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (item*)>
  <!ELEMENT item (name, price, description)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ATTLIST item
    id CDATA #REQUIRED
    status CDATA #IMPLIED>
]>
<catalog>
  <item id="1" status="new">
    <name>Apple</name>
    <price>1.99</price>
    <description>Fruit</description>
  </item>
  <item id="2" status="refurbished">
    <name>TV</name>
    <price>800.99</price>
    <description>Entertainment system</description>
  </item>
</catalog>