<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (book+, author+)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    title CDATA #REQUIRED
    author CDATA #IMPLIED>
  <!ATTLIST author
    name CDATA #REQUIRED
    address CDATA #IMPLIED>
]>
<catalog>
  <book title="Harry Potter" author="J.K. Rowling"/>
  <author name="J.K. Rowling" address="London"/>
  <book title="The Hunger Games" author="Suzanne Collins">
    <author name="Suzanne Collins" address="New York"></author>
  </book>
</catalog>