<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book|author*)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST book
    title CDATA #REQUIRED
    author CDATA #IMPLIED>
  <!ATTLIST author
    name CDATA #REQUIRED>
]>
<library>
  <book title="The Great Gatsby">
    <author name="F. Scott Fitzgerald"/>
  </book>
  <author name="Leo Tolstoy"/>
</library>