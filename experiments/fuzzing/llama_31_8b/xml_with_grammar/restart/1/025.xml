<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book+, author*)> 
  <!ELEMENT book (#PCDATA)> 
  <!ELEMENT author (#PCDATA)> 
  <!ATTLIST author
    name CDATA #REQUIRED
    age CDATA #IMPLIED>
  <!ATTLIST book
    title CDATA #REQUIRED
    authorRef IDREF #IMPLIED>
]>
<library>
  <book title="To Kill a Mockingbird" authorRef="HarperLee"/>
  <book title="1984" authorRef="GeorgeOrwell"/>
  <author name="HarperLee" age="75"/>
</library>