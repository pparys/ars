<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE book [
  <!ELEMENT book (author,parcel?holiday?)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST author
    sex (male|female) #REQUIRED
    lang CDATA #IMPLIED>
  <!ATTLIST parcel
    zip_code CDATA #REQUIRED
    tracking_number CDATA #IMPLIED>
  <!ATTLIST holiday
    date CDATA #REQUIRED
    type (type1|type2|type3)>
]>
<book>
  <author date_of_birth="1982-03-03" lang="english" sex="male">John Doe</author>
  <holiday date="2025-09-03" type="type2" />
  <parcel zip_code="12345" tracking_number="ABC123" />
</book>