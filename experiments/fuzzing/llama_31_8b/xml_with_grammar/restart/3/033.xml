<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE account [
  <!ELEMENT account (name, address, contact)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ELEMENT contact (phone, email)>
  <!ELEMENT phone (#PCDATA)>
  <!ELEMENT email (#PCDATA)>
  <!ATTLIST account
    id CDATA #REQUIRED
    owner CDATA #IMPLIED>
  <!ATTLIST contact
    type CDATA #REQUIRED>
]>
<account id="12345" owner="John Doe">
  <name>John Doe</name>
  <address>123 Main St, Anytown USA</address>
  <contact type="work">
    <phone>555-555-5555</phone>
    <email>johndoe@example.com</email>
  </contact>
</account>