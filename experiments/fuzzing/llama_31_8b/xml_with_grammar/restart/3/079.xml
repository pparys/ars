<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE user [
  <!ELEMENT user (name, address, phone*)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (street, city, state, zip)>
  <!ELEMENT street (#PCDATA)>
  <!ELEMENT city (#PCDATA)>
  <!ELEMENT state (#PCDATA)>
  <!ELEMENT zip (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ATTLIST user
    id CDATA #REQUIRED>
  <!ATTLIST address
    type (home|work) #REQUIRED>
  <!ATTLIST phone
    type (home|work) #REQUIRED>
]>
<user id="12345">
  <name>John Doe</name>
  <address type="home">
    <street>123 Main St</street>
    <city>Anytown</city>
    <state>NY</state>
    <zip>12345</zip>
  </address>
  <phone type="home">555-1234</phone>
  <phone type="work">555-5678</phone>
</user>