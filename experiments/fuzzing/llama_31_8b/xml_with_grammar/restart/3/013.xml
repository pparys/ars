<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book|author*)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST author
    id CDATA #REQUIRED
    name CDATA #IMPLIED>
]>
<library>
  <book>My Book Title 1</book>
  <book>My Book Title 2</book>
  <author id='A1' name='John Smith'/>
  <author>A2</author>
</library>