<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE employees [
  <!ELEMENT employees (employee*)>
  <!ELEMENT employee (name, address, phone*)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  <!ATTLIST employees
    company CDATA #REQUIRED
    date CDATA #IMPLIED>
  <!ATTLIST employee
    id CDATA #REQUIRED>
]>
<employees company="ABC Corporation" date="2024-01-01">
  <employee id="1">
    <name>John Doe</name>
    <address>123 Main St</address>
    <phone>555-1234</phone>
    <phone>555-5678</phone>
  </employee>
  <employee id="2">
    <name>Jane Doe</name>
    <address>456 Elm St</address>
    <phone>555-9012</phone>
  </employee>
</employees>