<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (book+)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST book
    author CDATA #REQUIRED
    year CDATA #IMPLIED>
  <!ATTLIST book/source CDATA #IMPLIED>
]>
<catalog>
  <book author="John Doe" year="2020">This is a book</book>
  <book author="Jane Doe" year="2021" source="Publication A">This is another book</book>
</catalog>