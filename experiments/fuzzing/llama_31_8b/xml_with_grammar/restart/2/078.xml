<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE person [
<!ELEMENT person (name, address, phone)>
<!ATTLIST person
	 id CDATA #REQUIRED
	 type (individual|corporate) "individual"
>
<!ATTLIST address 
  street CDATA #REQUIRED
  city CDATA #REquired
  zip CDATA #REQUIRED
>
<!ATTLIST phone
  number CDATA #REQUIRED
  type (home|work|mbl) "home"
>
<!ATTLIST name
  first CDATA #REQUIRED
  last CDATA #REQUIRED
>
]>
<person id="p1" type="individual">
  <name first="John" last="Doe"></name>
  <address street="123 Main St" city="Anytown" zip="12345"></address>
  <phone number="512-123-4567" type="home"></phone>
</person>