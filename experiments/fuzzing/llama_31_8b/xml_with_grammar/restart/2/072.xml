<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (#PCDATA) >
  <!ELEMENT book (#PCDATA) >
  <!ELEMENT author (#PCDATA) >
  <!ELEMENT publisher (#PCDATA) >
  <!ATTLIST book
    isbn CDATA #REQUIRED
    price CDATA #IMPLIED>
  <!ATTLIST author
    name CDATA #REQUIRED
    email CDATA #IMPLIED>
]>
<catalog>
  <book isbn="123456789" price="24.99">
    <author name="John Doe" email="john@example.com">
      <publisher>The Publishing House</publisher>
    </author>
  </book>
  <book isbn="987654321" price="29.99">
    <author name="Jane Smith" email="jane@example.com">
      <publisher>The Publishing House</publisher>
    </author>
  </book>
</catalog>