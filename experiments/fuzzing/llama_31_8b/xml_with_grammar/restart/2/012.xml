<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book+, author+)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    title CDATA #REQUIRED
    authorref CDATA #IMPLIED>
  <!ATTLIST author
    name CDATA #REQUIRED
    email CDATA #IMPLIED>
]>
<library>
    <book title="Introduction to Computer Science" authorref="#A0">
        <author name="John Smith" email="john.smith@example.com">
            A detailed introduction to the world of computer science.
        </author>
    </book>
    <book title="XML Developer's Handbook" authorref="#A1">
        <author name="Jane Doe" email="jane.doe@example.com">The ultimate guide for XML developers.</author>
    </book>
    <author name="Jane Doe" email="jane.doe@example.com" id="A1"/>
</library>