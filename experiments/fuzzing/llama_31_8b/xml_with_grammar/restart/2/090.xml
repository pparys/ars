<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (#PCDATA)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT title (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    title CDATA #IMPLIED>
  <!ATTLIST author
    name CDATA #REQUIRED
    birthday CDATA #IMPLIED>
]>
<books>
  <book id="BK001" title="Harry Potter">
    <author name="J.K. Rowling" birthday="1965-07-31">Author of the Harry Potter series</author>
  </book>
  <book id="BK002" title="The Lord of the Rings">
    <author name="J.R.R. Tolkien" birthday="1892-01-03"/>(the famous author)
  </book>
</books>