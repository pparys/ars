<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book+)>
  <!ELEMENT book (title,author,genre)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT genre (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED>
  <!ATTLIST library
    title CDATA #IMPLIED
    author CDATA #IMPLIED
    year CDATA #IMPLIED>
]>
<library title="Modern Bestsellers" author="John Smith" year="2020">
  <book id="b003" title="To Kill a Mockingbird" author="Harper Lee" genre="Fiction"/>
  <book id="b004" title="The Great Gatsby" author="F. Scott Fitzgerald" genre="Fiction"/>
  <book id="b005" title="The Little Prince" author="Antoine de Saint-Exupery" genre="Fiction"/>
</library>