<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (book+)> 
  <!ELEMENT book (author, title, price)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ATTLIST book 
    year CDATA #REQUIRED
    isbn CDATA #REQUIRED>
  <!ATTLIST author 
    name CDATA #REQUIRED>
]>
<catalog>
  <book year="2020" isbn="1234567890">
    <author name="John Doe">
      <title>This is a book</title>
      <price>$19.99</price>
    </author>
  </book>
  <book year="2019" isbn="0987654321">
    <author name="Jane Doe">
      <title>This is another book</title>
      <price>$9.99</price>
    </author>
  </book>
</catalog>