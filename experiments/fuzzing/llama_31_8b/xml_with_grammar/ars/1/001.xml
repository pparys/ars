<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (product*)>
  <!ELEMENT product (description+ | price+)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT name (#PCDATA)>
  <!ATTLIST product
    id CDATA #REQUIRED
    type (book|movie) "book">
]>
<catalog>
  <product id="PRD-101" type="book">
    <name>XML Parsing</name>
    <description>This is a book about XML parsing.</description>
  </product>
  <product id="PRD-102" type="movie">
    <name>Attack on Titan</name>
    <price>$20.00</price>
  </product>
</catalog>