<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (book+)>
  <!ELEMENT book (#PCDATA|title|author)*>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    title CDATA #IMPLIED
    author CDATA #IMPLIED
    year CDATA #REQUIRED
  >
]>
<books>
  <book title="The Great Gatsby" author="F. Scott Fitzgerald" year="1925">It was a day of cheerfulness.</book>
  <book title="1984" author="George Orwell" year="1949">It was a very creepy place.</book>
</books>