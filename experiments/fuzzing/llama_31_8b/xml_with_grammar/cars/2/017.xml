<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (book+)>
  <!ELEMENT book (#PCDATA)>
  <!ATTLIST book
    title CDATA #REQUIRED
    author CDATA #IMPLIED
    year CDATA #IMPLIED>
]>
<library>
  <book title="To Kill a Mockingbird" author="Harper Lee" year="1960">A classic novel about justice.</book>
  <book title="1984" author="George Orwell">A dystopian novel about totalitarianism.</book>
</library>