<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (book+)>
  <!ELEMENT book (author, title)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT title (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
  >
]>
<books>
  <book id="1">
    <author>John Doe</author>
    <title>My First Book</title>
  </book>
  <book id="2">
    <author>Jane Doe</author>
    <title>My Second Book</title>
  </book>
</books>