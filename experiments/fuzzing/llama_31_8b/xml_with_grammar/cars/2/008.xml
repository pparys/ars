<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE library [
  <!ELEMENT library (#PCDATA | book | author)*>
  <!ELEMENT book (#PCDATA | title | author)*>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT title (#PCDATA)>
  <!ATTLIST library
    language (EN|null) #REQUIRED
    file_name CDATA #IMPLIED>
  <!ATTLIST book
    title CDATA #REQUIRED
    pages CDATA #IMPLIED>
  <!ATTLIST author
    name CDATA #REQUIRED
    birth_date CDATA #IMPLIED>
]>
<library language="EN" file_name="books.xml">
  <book title="The Great Gatsby" pages="300">
    <author name="F. Scott Fitzgerald" birth_date="1896-09-24"/>
  </book>
  <book title="To Kill a Mockingbird" pages="281">
    <author name="Harper Lee" birth_date="1926-04-28"/>
  </book>
  <author name="Jane Austen" birth_date="1775-12-16"/>
  <title>The Picture of Dorian Gray</title>
</library>