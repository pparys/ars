    <category>Smartphone</category>
    <price>500.00</price>
    <description>This is iPhone 13.</description>
  </product>
  <product id="2">
    <category>Laptop</category>
    <price>1000.00</price>
    <description>This is Dell XPS 13.</description>
  </product>
</products>