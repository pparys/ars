<!DOCTYPE catalog [
  <!ELEMENT catalog (product+)>
  <!ELEMENT product (name,description,price)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
