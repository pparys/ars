<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE person [
  <!ELEMENT person (name,address,id)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT address (street,city,state,country)>
  <!ELEMENT street (#PCDATA)>
  <!ELEMENT city (#PCDATA)>
  <!ELEMENT state (#PCDATA)>
  <!ELEMENT country (#PCDATA)>
  <!ELEMENT id (#PCDATA)>
  <!ATTLIST person
    type (customer|employee) "customer"
  >
]>
<person type="customer">
  <name>John Doe</name>
  <address>
    <street>123 Main St</street>
    <city>Anytown</city>
    <state>CA</state>
    <country>USA</country>
  </address>
  <id>12345</id>
</person>