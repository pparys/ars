<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (book+)>
  <!ELEMENT book EMPTY>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST page
    num CDATA #REQUIRED
    fullsize (yes|no) "yes"
    partialsize (yes|no) "no"
    confirm (yes|no) "yes" >
]>
<catalog>
  <book>
    <title>Harry Potter and the Goblet of Fire</title>
    <author>J.K. Rowling</author>
    <page num="1" fullsize="yes" partialsize="no" confirm="yes"></page>
  </book>
  <book>
    <title>The Hobbit</title>
    <author>J.R.R. Tolkien</author>
    <page num="2" fullsize="no" partialsize="no" confirm="no"></page>
  </book>
</catalog>