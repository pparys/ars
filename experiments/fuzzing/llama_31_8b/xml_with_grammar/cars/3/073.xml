<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config [
  <!ELEMENT config (database, user)>
  <!ELEMENT database (host, user, password)>
  <!ELEMENT user (#PCDATA)>
  <!ELEMENT host (#PCDATA)>
  <!ELEMENT password (#PCDATA)>
  <!ATTLIST config
    version CDATA "#REQUIRED"
  >
  <!ATTLIST database
    type CDATA "#REQUIRED"
  >
]>
<config>
  <version>1.0</version>
  <database>
    <type>MySQL</type>
    <host>localhost</host>
    <user>root</user>
    <password>password</password>
  </database>
  <user>
    Test User
  </user>
</config>