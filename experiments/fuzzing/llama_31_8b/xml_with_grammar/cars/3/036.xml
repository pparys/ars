<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (item*)>
  <!ELEMENT item (description, price, availability)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT availability (#PCDATA)>

  <!ATTLIST item
    id    CDATA    #REQUIRED
    type  CDATA    #IMPLIED
  >
  <!ATTLIST catalog
    brand    CDATA    #IMPLIED
  >
]>
<catalog brand="The Best Shop" >
  <item id="1">
    <description>Apple iPhone 14</description>
    <price>$999.99</price>
    <availability>In Stock</availability>
  </item>
  <item id="2">
    <description>Samsung Galaxy S22</description>
    <price>$1,099.99</price>
    <availability>Out of Stock</availability>
  </item>
</catalog>