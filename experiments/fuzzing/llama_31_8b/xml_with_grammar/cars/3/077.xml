<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE catalog [
  <!ELEMENT catalog (book+,author+)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ATTLIST book
    id CDATA #REQUIRED
    year CDATA #IMPLIED>
  <!ATTLIST author
    name CDATA #IMPLIED>
]>
<catalog>
  <book id="b001" year="2020">Book Description</book>
  <book id="b002" year="2021">Another Book</book>
  <author name="John Doe"/><author name="Jane Doe"/>
</catalog>