<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE article [
  <!ELEMENT article (header, body, reference)>
  <!ELEMENT header (#PCDATA)>
  <!ELEMENT body (#PCDATA)>
  <!ELEMENT reference (#PCDATA)>
  <!ATTLIST article
